         <div xml:id="workid66488" decls="#biblid66488">
            <head xml:id="idm139668652257312">Ballade.</head>
            <lg xml:id="idm139668652256896">
               <l xml:id="idm139668652256640">I Achelos sidder sorgfri</l>
               <l xml:id="idm139668652256208">Michalistos i sin Gaard.</l>
               <l xml:id="idm139668652255776">Han er munter, thi hans unge</l>
               <l xml:id="idm139668652255344">Hustru ved hans Side staaer.</l>
               <l xml:id="idm139668652254912">Nattens Dæmring alt sig nærmer;</l>
               <l xml:id="idm139668652254448">Det bekymrer ham ei stort.</l>
               <l xml:id="idm139668652254016">Ved et Bæger Viin han sværmer -</l>
               <l xml:id="idm139668652253552">Da det banker paa hans Port.</l>
            </lg>
            <lg xml:id="idm139668652252992">
               <l xml:id="idm139668652252736">Udenfor Kapidschi Baschi</l>
               <l xml:id="idm139668652252304">Holder med en Flok tilhest.</l>
               <l xml:id="idm139668652251872">»Hil dig!« siger Michalistos;</l>
               <l xml:id="idm139668652251440">»Ædle Herre! vær min Gjæst.«</l>
               <l xml:id="idm139668652251008">- »Ei vi komme for at drikke« -</l>
               <l xml:id="idm139668652250544">Bryder hiin med Strenghed ud;</l>
               <l xml:id="idm139668652250112">»For at sværme kom jeg ikke.</l>
               <l xml:id="idm139668652249680">Reis dig op, og hør mit Bud!</l>
            </lg>
            <pb n="139" xml:id="s139" facs="adl/hertz/hertz10/hertz10139"/>
            <lg xml:id="idm139668652247904">
               <l xml:id="idm139668652247648">»Michalistos! du er domfældt,</l>
               <l xml:id="idm139668652247216">Du, din Eiendom, din Viv!</l>
               <l xml:id="idm139668652246784">I Divanet en Beslutning</l>
               <l xml:id="idm139668652246368">Rettet er mod eders Liv.«</l>
               <l xml:id="idm139668652245920">- Micholistos' Hustru blegner;</l>
               <l xml:id="idm139668652245488">Selv han smiler stolt derved.</l>
               <l xml:id="idm139668652245056">Og der skydes, og han segner,</l>
               <l xml:id="idm139668652244624">Og hans unge Hustru med.</l>
            </lg>
