         <div xml:id="workid58373" decls="#biblid58373">
            <head xml:id="idm140264665013936">
               <hi rend="italics" xml:id="idm140264665013680">RAAD TIL EN KVINDE</hi>
               <lb xml:id="idm140264665012992"/>
               <hi rend="italics" xml:id="idm140264665012736">FRA DET SYTTENDE AARHUNDREDE</hi>
            </head>
            <lg xml:id="idm140264665011904">
               <l xml:id="idm140264665011648">Græs og Grønsvær, hvor vi træder,</l>
               <l xml:id="idm140264665011168">alle ømme Ønsker tændt,</l>
               <l xml:id="idm140264665010720">Kærlighed i hvide Klæder</l>
               <l xml:id="idm140264665010272">mod et luftblaat Firmament.</l>
            </lg>
            <lg xml:id="idm140264665009712">
               <l xml:id="idm140264665009456">Svimlende ved Himlens Porte</l>
               <l xml:id="idm140264665009024">vil et altfor jordisk Krav</l>
               <l xml:id="idm140264665008592">strække os tilintetgjorte</l>
               <l xml:id="idm140264665008144">paa vor unge Elskovs Grav.</l>
            </lg>
            <lg xml:id="idm140264665007584">
               <l xml:id="idm140264665007328">Kvinde blues! - ej at skues</l>
               <l xml:id="idm140264665006896">taaler Livets skønne Gud.</l>
               <l xml:id="idm140264665006448">Ung og vældig - som tilfældig -</l>
               <l xml:id="idm140264665005984">hævder skæmtvis han sit Bud</l>
            </lg>
            <lg xml:id="idm140264665005392">
               <l xml:id="idm140264665005136">og velsigner vore Fjed,</l>
               <l xml:id="idm140264665004720">naar vor Afmagt, mens vi længes,</l>
               <l xml:id="idm140264665004256">ganske skjules, gennemtrænges</l>
               <l xml:id="idm140264665003792">af en ung Forelskethed.</l>
            </lg>
         </div>
      </body>
