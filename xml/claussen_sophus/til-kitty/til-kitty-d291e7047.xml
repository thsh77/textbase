         <div xml:id="workid69445" decls="#biblid69445">
            <head xml:id="idm140264665622144">
               <hi rend="italics" xml:id="idm140264665621888">TIL KITTY</hi>
            </head>
            <lg xml:id="idm140264665621072">
               <l xml:id="idm140264665620816">Jeg skylder dig mer, end Fornuften</l>
               <l xml:id="idm140264665620432">Og Mennesker tror</l>
               <l xml:id="idm140264665620016">(Endskønt du blev Foraarsduften,</l>
               <l xml:id="idm140264665619552">Som fylder min Jord) -</l>
            </lg>
            <lg xml:id="idm140264665619008">
               <l xml:id="idm140264665618752">Fordi du, foruden at mætte</l>
               <l xml:id="idm140264665618304">Mit Væsen med Vaar,</l>
               <l xml:id="idm140264665617856">Forunderlig vidste at sætte</l>
               <l xml:id="idm140264665617392">De dybeste Saar -</l>
            </lg>
            <lg xml:id="idm140264665616848">
               <l xml:id="idm140264665616592">Fordi du - ej blot ved at smærte</l>
               <l xml:id="idm140264665616128">En Ven uden Værn,</l>
               <l xml:id="idm140264665615696">Men drømmende tro ved mit Hjærte,</l>
               <l xml:id="idm140264665615232">Naar jeg var dig fjærn -</l>
            </lg>
            <lg xml:id="idm140264665614656">
               <l xml:id="idm140264665614400">Har gjort mig (vi lader nu falde</l>
               <l xml:id="idm140264665614016">Hver Spøg og hver Strid)</l>
               <l xml:id="idm140264665613568">Den lykkeligste af alle,</l>
               <l xml:id="idm140264665613184">Som var i min Tid.</l>
            </lg>
         </div>
      </body>
