         <div xml:id="workid68496" decls="#biblid68496">
            <head xml:id="idm140264663740624">
               <hi rend="italics" xml:id="idm140264663740368">SFINX</hi>
            </head>
            <lg xml:id="idm140264663739552">
               <l xml:id="idm140264663739296">Hvem var denne smukke Kvinde</l>
               <l xml:id="idm140264663738864">sammen med den tunge Mand?</l>
               <l xml:id="idm140264663738432">hun som i den lette Tram tog Sæde</l>
               <l xml:id="idm140264663737968">og tilbagelænet bortvendt</l>
               <l xml:id="idm140264663737520">trykket tæt til Ruden</l>
               <l xml:id="idm140264663737072">stadig stirred ud -</l>
            </lg>
            <lg xml:id="idm140264663736528">
               <l xml:id="idm140264663736272">Var hun ikke selve Drømmen</l>
               <l xml:id="idm140264663735824">blid og bleg og fuldendt god?</l>
               <l xml:id="idm140264663735392">Øjeæblet har i Farvemangel</l>
               <l xml:id="idm140264663734960">med en Rest af Nattens Taage</l>
               <l xml:id="idm140264663734528">mellem hendes Laage</l>
               <l xml:id="idm140264663734112">skabt det store Blik.</l>
            </lg>
            <lg xml:id="idm140264663733568">
               <l xml:id="idm140264663733312">Se hvor hun i Rudeglasset</l>
               <l xml:id="idm140264663732880">bortvendt hænger ved sin Drøm!</l>
               <l xml:id="idm140264663732416">hvilende sin Ynde som en Byrde,</l>
               <l xml:id="idm140264663731984">mens fra korslagt Knæ de slængte</l>
               <l xml:id="idm140264663731520">Ruskinds Ankler slingrer</l>
               <l xml:id="idm140264663731088">under Silkesøm.</l>
            </lg>
            <lg xml:id="idm140264663730528">
               <l xml:id="idm140264663730272">Sort er Floret, lyst er Haaret,</l>
               <l xml:id="idm140264663729840">Kinden hvid af Nat og Vaar.</l>
               <l xml:id="idm140264663729408">Vi er alle Træ af jordisk Tømmer.</l>
               <l xml:id="idm140264663728944">Men jeg spørger, og jeg drømmer:</l>
               <l xml:id="idm140264663728480">Er det Engle - eller</l>
               <l xml:id="idm140264663728064">Furier i Aar?</l>
            </lg>
            <lg xml:id="idm140264663727520">
               <l xml:id="idm140264663727264">Engel i den danske Paaske,</l>
               <l xml:id="idm140264663726832">gjort af hvidt og graat og sort</l>
               <pb n="141" xml:id="s141" facs="adl/claussen/claussen11/claussen11141"/>
               <l xml:id="idm140264663725200">svøbt i Flor af tynde Silkestoffer</l>
               <l xml:id="idm140264663724736">med et Pust af Mulm og Øde -</l>
               <l xml:id="idm140264663724272">som et Paaskeoffer</l>
               <l xml:id="idm140264663723856">til den nye Vaar.</l>
            </lg>
         </div>
