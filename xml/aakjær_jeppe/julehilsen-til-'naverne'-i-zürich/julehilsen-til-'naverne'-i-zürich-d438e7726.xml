   <text>
      <body>
         <div xml:id="workid69128" decls="#biblid69128">
            <head xml:id="idm139850576418192">
               <hi rend="italics" xml:id="idm139850576418064"><!--<emph>-->JULEHILSEN<!--</emph--></hi>
               <lb xml:id="idm139850576417152"/>
               <hi rend="italics" xml:id="idm139850576417024"><!--<emph>-->TIL "NAVERNE" I ZÜRICH<!--</emph--></hi>.</head>
            <lg xml:id="idm139850576415856">
               <l xml:id="idm139850576415600">VI sidder herhjemme og længes derud</l>
               <l xml:id="idm139850576415120">mod blinkende Tinder og Floder,</l>
               <l xml:id="idm139850576414688">mod Liv der ej drukner i Graahed og Slud,</l>
               <l xml:id="idm139850576414240">mod Kjøbslag i fremmede Boder,</l>
               <l xml:id="idm139850576413776">mod Alper i Glød, mod en høj Horisont,</l>
               <l xml:id="idm139850576413296">mod Rejser og Router al Jorderig rundt,</l>
               <l xml:id="idm139850576412864">- bort, bort fra de stængende Gyder!</l>
            </lg>
            <pb n="75" xml:id="s75" facs="adl/aakjaer/aakjaer2/aakj2075"/>
            <lg xml:id="idm139850576411024">
               <l xml:id="idm139850576410768">I gaar vel og stirrer jer Øjet i Vand</l>
               <l xml:id="idm139850576410288">paa alle de funklende Tinder</l>
               <l xml:id="idm139850576409856">og længes herhjem mod vort taagede Land</l>
               <l xml:id="idm139850576409376">med alle dets Juletræsminder,</l>
               <l xml:id="idm139850576408912">mod Hytten og Hyggen - en Kjærest', en Bror,</l>
               <l xml:id="idm139850576408416">mod Haandtryk og Smil - og en krumbøjet Mor,</l>
               <l xml:id="idm139850576407920">der blunder i Stolen bag Ovnen.</l>
            </lg>
            <lg xml:id="idm139850576407360">
               <l xml:id="idm139850576407104">Saa længes og trænges hver kvindefødt Sjæl</l>
               <l xml:id="idm139850576406608">fra Livsløbets Stunder begynde,</l>
               <l xml:id="idm139850576406144">mens Støvlerne stødes for Taa og for Hæl,</l>
               <l xml:id="idm139850576405648">og Saalerne slides saa tynde.</l>
               <l xml:id="idm139850576405216">- I Længsel at vandre mod uvisse Maal</l>
               <l xml:id="idm139850576404736">med tusinde Mil bag den lasede Saal</l>
               <l xml:id="idm139850576404304">er Lov for en Ranselens Ridder.</l>
            </lg>
            <trailer xml:id="idm139850576403744">
               <date xml:id="idm139850576403616">20/12 1911</date>.</trailer>
