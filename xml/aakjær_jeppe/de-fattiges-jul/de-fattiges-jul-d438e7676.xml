         <div xml:id="workid69033" decls="#biblid69033">
            <head xml:id="idm139850576430336">
               <hi rend="italics" xml:id="idm139850576430208"><!--<emph>-->DE FATTIGES JUL<!--</emph--></hi>.</head>
            <lg xml:id="idm139850576429040">
               <l xml:id="idm139850576428784">LYSET tændt,</l>
               <l xml:id="idm139850576428352"> Minderne tændt,</l>
               <l xml:id="idm139850576427920">Sind og Øje fra Styghed vendt;</l>
               <l xml:id="idm139850576427456">Døgnet danser med hoppende Hjul,</l>
               <l xml:id="idm139850576426992">Freden gjemmer sin Sne til Jul,</l>
               <l xml:id="idm139850576426560">drysser den paa vore Saar!</l>
            </lg>
            <lg xml:id="idm139850576426000">
               <l xml:id="idm139850576425744">Paradis,</l>
               <l xml:id="idm139850576425360">Drømmenes Dis...</l>
               <l xml:id="idm139850576424928">Glem i Aften dit Livs Forlis!</l>
               <l xml:id="idm139850576424496">Sorgen suger i mig som i dig,</l>
               <l xml:id="idm139850576424064">denne Kvæld viser Stjærnen Vej,</l>
               <l xml:id="idm139850576423600">vov dig da ind i dens Glans.</l>
            </lg>
            <lg xml:id="idm139850576423040">
               <l xml:id="idm139850576422784">Skjønne Maal,</l>
               <l xml:id="idm139850576422352">hellige Maal :</l>
               <l xml:id="idm139850576421936">Smilet fylder den sultnes Skaal,</l>
               <l xml:id="idm139850576421504">Lyset strejfer en graadskjæmmet Kind,</l>
               <l xml:id="idm139850576421024">varme Hænder bær' Fadet ind, -</l>
               <l xml:id="idm139850576420560">Godhed, o Jul, er dit Navn!</l>
            </lg>
            <trailer xml:id="idm139850576420000">
               <date xml:id="idm139850576419872">18/12 1911</date>.</trailer>
         </div>
