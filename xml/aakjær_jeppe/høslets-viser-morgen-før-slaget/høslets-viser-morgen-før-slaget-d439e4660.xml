         <div xml:id="workid62827" decls="#biblid62827">
            <head xml:id="idm139850577191040">HØSLETS-VISER.<lb xml:id="idm139850577190736"/>
               <hi rend="italics" xml:id="idm139850577190480"><!--<emph>-->MORGEN FØR SLAGET<!--</emph--></hi>.</head>
            <lg xml:id="idm139850577189296">
               <l xml:id="idm139850577189040">HAR i nu Tænder i Riven sat?</l>
               <l xml:id="idm139850577188576"> Er I parat, mine Drenge?</l>
               <l xml:id="idm139850577188144">Duggen har drysset den hele Nat,</l>
               <l xml:id="idm139850577187712">Leen har ventet os længe.</l>
               <l xml:id="idm139850577187264">Armen er styrket af Søvnen sund,</l>
               <l xml:id="idm139850577186800">Solen os hilser fra Bakkens Rund;</l>
               <l xml:id="idm139850577186368">bag Syrener forborgen</l>
               <l xml:id="idm139850577185984">kukker en Gjøg: Godmorgen !</l>
            </lg>
            <lg xml:id="idm139850577185392">
               <l xml:id="idm139850577185136">Mor har pustet til Arnens Glød,</l>
               <l xml:id="idm139850577184672">sysler derinde ved Davren;</l>
               <l xml:id="idm139850577184240">se, hvor Røgen fra hendes Grød</l>
               <l xml:id="idm139850577183776">sænker sig blødt over Havren!</l>
               <l xml:id="idm139850577183312">Mad hun smører, som kan forslaa,</l>
               <l xml:id="idm139850577182848">01 hun styrter i Dunke graa,</l>
               <l xml:id="idm139850577182416">lægger en Klukkert i Tejnen,</l>
               <l xml:id="idm139850577181952">som kan ta' Tonen fra Degnen.</l>
            </lg>
            <lg xml:id="idm139850577181392">
               <l xml:id="idm139850577181136">Nu paa Vognen enhver især!</l>
               <l xml:id="idm139850577180688">Plagen i Stenene skraber.</l>
               <l xml:id="idm139850577180256">Vidt opslaget, mod Østens Skjær</l>
               <l xml:id="idm139850577179792">Porten undrende gaber.</l>
               <pb n="39" xml:id="s39" facs="adl/aakjaer/aakjaer2/aakj2039"/>
               <l xml:id="idm139850577178176">Svalen svitter om Vognens Spand,</l>
               <l xml:id="idm139850577177744">Dagen venter den glade Mand,</l>
               <l xml:id="idm139850577177312">Blodet synger i Bringen</l>
               <l xml:id="idm139850577176896">dæmpet til Klokkers Ringen.</l>
            </lg>
            <trailer xml:id="idm139850577176304">
               <date xml:id="idm139850577176176">7/2 1910</date>.</trailer>
