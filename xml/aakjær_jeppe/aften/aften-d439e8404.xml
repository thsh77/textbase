         <div xml:id="workid70528" decls="#biblid70528">
            <head xml:id="idm139850576244448">
               <hi rend="italics" xml:id="idm139850576244320"><!--<emph>-->AFTEN<!--</emph--></hi>.</head>
            <lg xml:id="idm139850576243152">
               <l xml:id="idm139850576242896">STILLE, Hjærte, Sol gaar ned,</l>
               <l xml:id="idm139850576242432">Sol gaar ned paa Heden,</l>
               <l xml:id="idm139850576242048">Dyr gaar hjem fra Dagens Béd,</l>
               <l xml:id="idm139850576241584">Storken staar i Reden.</l>
               <l xml:id="idm139850576241168">Stille, Hjærte, Sol gaar ned.</l>
            </lg>
            <lg xml:id="idm139850576240576">
               <l xml:id="idm139850576240320">Tavshed over Hedesti</l>
               <l xml:id="idm139850576239904">og langs Veje krumme.</l>
               <l xml:id="idm139850576239488">En forsinket Humlebi</l>
               <l xml:id="idm139850576239072">ene høres brumme.</l>
               <l xml:id="idm139850576238640">Stille, Hjærte, Sol gaar ned.</l>
            </lg>
            <lg xml:id="idm139850576238048">
               <l xml:id="idm139850576237792">Viben slaar et enligt Slag</l>
               <l xml:id="idm139850576237360">over Mosedammen,</l>
               <l xml:id="idm139850576236944">før den under Frytlens Tag</l>
               <l xml:id="idm139850576236496">folder Vingen sammen.</l>
               <l xml:id="idm139850576236080">Stille, Hjærte, Sol gaar ned.</l>
            </lg>
            <lg xml:id="idm139850576235488">
               <l xml:id="idm139850576235232">Fjerne Ruder østerpaa</l>
               <l xml:id="idm139850576234784">blusser op i Gløden,</l>
               <l xml:id="idm139850576234336">Hededamme bittesmaa</l>
               <l xml:id="idm139850576233920">spejler Aftenrøden.</l>
               <l xml:id="idm139850576233472">Stille, Hjærte, Sol gaar ned!</l>
            </lg>
         </div>
