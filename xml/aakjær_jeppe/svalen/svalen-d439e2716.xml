         <div xml:id="workid58870" decls="#biblid58870">
            <head xml:id="idm139850577680960">
               <hi rend="italics" xml:id="idm139850577680832"><!--<emph>-->SVALEN<!--</emph--></hi>.</head>
            <lg xml:id="idm139850577679664">
               <l xml:id="idm139850577679408">HOR hvor let dens Vinge smækker</l>
               <l xml:id="idm139850577678944">mod den tunge Kløverdusk,</l>
               <l xml:id="idm139850577678496">mens den som en Skyttel lægger</l>
               <l xml:id="idm139850577678032">Farten gjennem Røg og Rusk.</l>
            </lg>
            <lg xml:id="idm139850577677440">
               <l xml:id="idm139850577677184">O, du lille verdsligkaade,</l>
               <l xml:id="idm139850577676752">Flugtens fødte Favorit,</l>
               <l xml:id="idm139850577676304">som til Livets tunge Gaade</l>
               <l xml:id="idm139850577675872">ikkun har et let "Kvivit!"</l>
            </lg>
            <lg xml:id="idm139850577675312">
               <l xml:id="idm139850577675056">Vilde du kun tit mig følge</l>
               <l xml:id="idm139850577674608">lig en lille venlig Aand,</l>
               <l xml:id="idm139850577674176">som du nu paa Luftens Bølge</l>
               <l xml:id="idm139850577673712">næsten strejfede min Haand!</l>
            </lg>
            <lg xml:id="idm139850577673120">
               <l xml:id="idm139850577672864">Vilde du kun tit mig lede</l>
               <l xml:id="idm139850577672432">som i hine fjerne Aar</l>
               <l xml:id="idm139850577672048">paa min Barndoms tunge Hede</l>
               <l xml:id="idm139850577671616">til min Faders lave Gaard!</l>
            </lg>
            <lg xml:id="idm139850577671056">
               <l xml:id="idm139850577670800">Aa, naar du paa Blæsten vendte</l>
               <l xml:id="idm139850577670336">og mig i mit Ansigt saa,</l>
               <l xml:id="idm139850577669904">var det næsten, som du kjendte</l>
               <l xml:id="idm139850577669440">Barnesindets Sorger smaa.</l>
            </lg>
            <lg xml:id="idm139850577668880">
               <l xml:id="idm139850577668624">Ja, det var som om du tøved</l>
               <l xml:id="idm139850577668160">et Sekund og fritted mig:</l>
               <l xml:id="idm139850577667728">"Hvi er lille Bror bedrøvet,</l>
               <l xml:id="idm139850577667264">hvorfor ikke glad som jeg?"</l>
            </lg>
            <pb n="17" xml:id="s17" facs="adl/aakjaer/aakjaer2/aakj2017"/>
            <lg xml:id="idm139850577665600">
               <l xml:id="idm139850577665344">Men naar du saa Gaarden stige</l>
               <l xml:id="idm139850577664912">bagom Kaalgaard-Popler frem,</l>
               <l xml:id="idm139850577664480">svandt du langs det lange Dige</l>
               <l xml:id="idm139850577664048">- for at følge andre hjem.</l>
            </lg>
            <lg xml:id="idm139850577663472">
               <l xml:id="idm139850577663216">Sildig Aften, tidlig Morgen:</l>
               <l xml:id="idm139850577662784">samme Flugtens muntre Sting;</l>
               <l xml:id="idm139850577662352">samme Svinden, tyst, forborgen,</l>
               <l xml:id="idm139850577661920">som var Sagen ingen Ting.</l>
            </lg>
            <lg xml:id="idm139850577661360">
               <l xml:id="idm139850577661104">- Naar en Dag mit Blik skal briste,</l>
               <l xml:id="idm139850577660672">og min Aand maa flagre frit,</l>
               <l xml:id="idm139850577660240">bân du Vejen for min Kiste</l>
               <l xml:id="idm139850577659792">med dit elskede: "Kvivit!"</l>
            </lg>
            <trailer xml:id="idm139850577659232">
               <date xml:id="idm139850577659104">29/12 1908</date>.</trailer>
