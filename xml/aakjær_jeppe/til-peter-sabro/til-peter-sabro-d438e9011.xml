         <div xml:id="workid71740" decls="#biblid71740">
            <head xml:id="idm139850576094272">
               <hi rend="italics" xml:id="idm139850576094144"><!--<emph>-->TIL PETER SABRO<!--</emph--></hi>.</head>
            <lg xml:id="idm139850576092976">
               <l xml:id="idm139850576092720">Du valgte den herligste Gjerning,</l>
               <l xml:id="idm139850576092288">som Solen har skinnet paa:</l>
               <l xml:id="idm139850576091856">at tale og virke til Værning</l>
               <l xml:id="idm139850576091392">for alle de svage og smaa.</l>
            </lg>
            <pb n="89" xml:id="s89" facs="adl/aakjaer/aakjaer2/aakj2089"/>
            <lg xml:id="idm139850576089648">
               <l xml:id="idm139850576089392">Din Stemme har runget og ræddet</l>
               <l xml:id="idm139850576088928">saa mangen ugudelig Skarn,</l>
               <l xml:id="idm139850576088496">lagt Ømhedens Pude tilrette</l>
               <l xml:id="idm139850576088032">for mangt et hjælpeløst Barn.</l>
            </lg>
            <lg xml:id="idm139850576087440">
               <l xml:id="idm139850576087184">Derfor skal du nævnes i Norden</l>
               <l xml:id="idm139850576086720">med Tak af hvert Barn der blev Mor,</l>
               <l xml:id="idm139850576086288">naar selv du forlængst er i Jorden,</l>
               <l xml:id="idm139850576085808">hvor Dickens vil kalde dig Bror.</l>
            </lg>
            <trailer xml:id="idm139850576085248">
               <date xml:id="idm139850576085120">11/10 1912</date>.</trailer>
         </div>
