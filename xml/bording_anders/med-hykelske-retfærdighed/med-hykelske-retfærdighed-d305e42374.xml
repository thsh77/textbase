         <div xml:id="workid134943" decls="#biblid134943">
            <head xml:id="idm140114460952992">197.<lb xml:id="idm140114460952704"/>
               <hi rend="italics" xml:id="idm140114460952448">Dominica 6 post Trin. Evang. Math 5.</hi>
               <lb xml:id="idm140114460951744"/>
               <hi rend="italics" xml:id="idm140114460951488">Nisi abundaverit Justitia via etc</hi>:</head>
            <pb n="325" xml:id="s325" facs="adl/bording/bording1/bord1325"/>
            <lg xml:id="idm140114460949456">
               <head xml:id="idm140114460949200">1.</head>
               <l xml:id="idm140114460948816">Med Hykelske retfærdighed</l>
               <l xml:id="idm140114460948368">Tør ingen sig indbilde</l>
               <l xml:id="idm140114460947920">At hand den Gud som alting veed</l>
               <l xml:id="idm140114460947488">vil himlen af besnilde</l>
               <l xml:id="idm140114460947072">Naar Jeg i hjertet er ey from</l>
               <l xml:id="idm140114460946640">Udvortis skin och Helligdom</l>
               <l xml:id="idm140114460946208">Kand hannem ey formilde.</l>
            </lg>
            <lg xml:id="idm140114460945648">
               <head xml:id="idm140114460945392">2.</head>
               <l xml:id="idm140114460945008">Om Jeg end ey med haanden mord</l>
               <l xml:id="idm140114460944576">begaaer och blood udgyder</l>
               <l xml:id="idm140114460944144">Och dog med øyesjun och ord</l>
               <l xml:id="idm140114460943680">vredactelig udtyder</l>
               <l xml:id="idm140114460943264">At Jeg ey vil min næste vel</l>
               <l xml:id="idm140114460942800">Jeg for Guds ansict slaaer ihjel</l>
               <l xml:id="idm140114460942368">Och Himlens Fred ey nyder.</l>
            </lg>
            <lg xml:id="idm140114460941808">
               <head xml:id="idm140114460941552">3.</head>
               <l xml:id="idm140114460941168">Min bøn och læbers offer dig</l>
               <l xml:id="idm140114460940704">O fredsens Gud mishager</l>
               <l xml:id="idm140114460940288">Om ieg med min uven ey mig</l>
               <l xml:id="idm140114460939856">Af hjertet først fordrager</l>
               <l xml:id="idm140114460939408">Ja ja Jeg heller fra min ret</l>
               <l xml:id="idm140114460938976">vil stande self och mage det</l>
               <l xml:id="idm140114460938544">At hand paa mig ey klager.</l>
            </lg>
            <lg xml:id="idm140114460937984">
               <head xml:id="idm140114460937728">4.</head>
               <l xml:id="idm140114460937344">Anklages Jeg for Dommeren</l>
               <l xml:id="idm140114460936912">Hvo vil da mig husvale</l>
               <l xml:id="idm140114460936496">Thi Dommere[n] mig bort til den</l>
               <l xml:id="idm140114460936064">Som piner vil befale</l>
               <l xml:id="idm140114460935648">Der med er Jeg slet i forderf</l>
               <l xml:id="idm140114460935216">Thi Jeg ey kand den sidste skerf</l>
               <l xml:id="idm140114460934784">ævindelig betale.</l>
            </lg>
