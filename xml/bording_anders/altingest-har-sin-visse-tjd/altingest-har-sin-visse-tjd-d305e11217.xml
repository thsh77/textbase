         <div xml:id="workid75035" decls="#biblid75035">
            <head xml:id="idm140114468283136">34.<lb xml:id="idm140114468282832"/> [Til en af det Nafn<lb xml:id="idm140114468282544"/> Abel.]</head>
            <lg xml:id="idm140114468282128">
               <l xml:id="idm140114468281872">Altingest har sin visse Tjd</l>
               <l xml:id="idm140114468281440">Paa hvilken det skal drifves</l>
               <l xml:id="idm140114468281008">J dag er Tiden kommen hid</l>
               <l xml:id="idm140114468280576">At maae tilkjende gifves</l>
               <l xml:id="idm140114468280144">For alle, hvor høytidelig</l>
               <l xml:id="idm140114468279696">Jeg eders nafn vil bære</l>
               <l xml:id="idm140114468279248">Hvor skyldig Jeg befinder mig</l>
               <l xml:id="idm140114468278816">Til eders Dag at ære</l>
               <l xml:id="idm140114468278368">Men som Jeg af velgierninger</l>
               <l xml:id="idm140114468277936">Mig ofvervunden kjender</l>
               <l xml:id="idm140114468277520">Jeg eder intet andet her</l>
               <l xml:id="idm140114468277088">End hjertet ofversender</l>
               <l xml:id="idm140114468276672">Med ynsk at J saa mangt et Aar</l>
               <l xml:id="idm140114468276240">Maae denne Dag oplange</l>
               <l xml:id="idm140114468275824">Som Abels nafn det i sig har</l>
               <l xml:id="idm140114468275392">Bogstafver femten gange</l>
               <l xml:id="idm140114468274976">Och hafde Jeg et pærle baand</l>
               <l xml:id="idm140114468274512">J skulde det befinde</l>
               <l xml:id="idm140114468274096">Jeg vilde strax om eders haand</l>
               <l xml:id="idm140114468273664">Ey spare det at binde.</l>
            </lg>
         </div>
