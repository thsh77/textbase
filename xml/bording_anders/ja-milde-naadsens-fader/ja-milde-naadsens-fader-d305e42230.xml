         <div xml:id="workid134660" decls="#biblid134660">
            <head xml:id="idm140114460988416">195.<lb xml:id="idm140114460988128"/> Paa den 4 Søndag <hi rend="italics" xml:id="idm140114460987824">post Trinit Evang Luc 6.</hi>
               <lb xml:id="idm140114460987120"/>
               <hi rend="italics" xml:id="idm140114460986864">Estote Misericordes etc.</hi>
            </head>
            <lg xml:id="idm140114460986032">
               <head xml:id="idm140114460985776">1.</head>
               <l xml:id="idm140114460985392">Ja milde naadsens Fader</l>
               <l xml:id="idm140114460984976">Du din grundløse miskundhed</l>
               <l xml:id="idm140114460984512">Af ny hver morgen lader</l>
               <l xml:id="idm140114460984096">Til mig af Himlen regne need</l>
               <l xml:id="idm140114460983664">Du mig min maade fylder</l>
               <l xml:id="idm140114460983248">Med godhed rundelig</l>
               <l xml:id="idm140114460982832">och ey, som Jeg forskylder</l>
               <l xml:id="idm140114460982400">Til doms opstaaer mod mig</l>
               <pb n="324" xml:id="s324" facs="adl/bording/bording1/bord1324"/>
               <l xml:id="idm140114460980768">Jeg dig vil efter gange</l>
               <l xml:id="idm140114460980352">Som Jeg saa naadig seer</l>
               <l xml:id="idm140114460979936">Och vente mig at fange</l>
               <l xml:id="idm140114460979520">Det skjel, Jeg andre teer.</l>
            </lg>
            <lg xml:id="idm140114460978960">
               <head xml:id="idm140114460978704">2.</head>
               <l xml:id="idm140114460978320">Jeg self Jo daglig falder</l>
               <l xml:id="idm140114460977888">och øfver syndsens gjerninger</l>
               <l xml:id="idm140114460977424">Om Jeg mig hellig kalder</l>
               <l xml:id="idm140114460976992">En øyen skalk Jeg da vist er</l>
               <l xml:id="idm140114460976528">Hvi skulde Jeg saa nøye</l>
               <l xml:id="idm140114460976080">Den ringe skæf ansee</l>
               <l xml:id="idm140114460975632">Som i min broders øye</l>
               <l xml:id="idm140114460975184">Sig finde kand oc tee</l>
               <l xml:id="idm140114460974768">Ney ney, lad mig ud drage</l>
               <l xml:id="idm140114460974336">Min [egen] bielke først</l>
               <l xml:id="idm140114460973888">Och paa mig selfver klage</l>
               <l xml:id="idm140114460973456">min egen feyl er størst.</l>
            </lg>
            <trailer xml:id="idm140114460972880">Der paa gjorde Jeg self Tydsk</trailer>
         </div>
