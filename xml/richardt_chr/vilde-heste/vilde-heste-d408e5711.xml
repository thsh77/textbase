         <div xml:id="workid64960" decls="#biblid64960">
            <head xml:id="idm140152137111136">Vilde Heste.</head>
            <lg xml:id="idm140152137110720">
               <l xml:id="idm140152137110464">Vi er som vilde Heste</l>
               <l xml:id="idm140152137110048">paa Pampas vide Sletter,</l>
               <l xml:id="idm140152137109616">der kun sig selv vil raade</l>
               <l xml:id="idm140152137109184">ved baade Dag og Nætter -</l>
               <l xml:id="idm140152137108736">hvergang Guds Haand os vilde naae</l>
               <l xml:id="idm140152137108304">i Spring derfra vi sætter.</l>
            </lg>
            <pb n="83" facs="adl/richardt/richardt3/rich3083" xml:id="idm140152137107728"/>
            <lg xml:id="idm140152137106960">
               <l xml:id="idm140152137106704">Først fletted han af Ordet</l>
               <l xml:id="idm140152137106256">sin silkebløde Slynge,</l>
               <l xml:id="idm140152137105808">men ak vi haarde Halse</l>
               <l xml:id="idm140152137105392">den følte som en Tynge;</l>
               <l xml:id="idm140152137104944">vi sprænge den og fly derfra</l>
               <l xml:id="idm140152137104480">i vild, ubændig Klynge.</l>
            </lg>
            <lg xml:id="idm140152137103904">
               <l xml:id="idm140152137103648">Da byder han sin Engel,</l>
               <l xml:id="idm140152137103232">naar Fangstens Tid er inde,</l>
               <l xml:id="idm140152137102800">af lutter haarde Snore</l>
               <l xml:id="idm140152137102384">en Løkke fast at tvinde,</l>
               <l xml:id="idm140152137101936">af Sot og Savn, af Nød og Død,</l>
               <l xml:id="idm140152137101472">at Sejren han maa vinde.</l>
            </lg>
            <lg xml:id="idm140152137100912">
               <l xml:id="idm140152137100656">Men trodsig raser Fangen</l>
               <l xml:id="idm140152137100224">og vælter sig i Fraade -</l>
               <l xml:id="idm140152137099776">og seent først Hjertet lærer</l>
               <l xml:id="idm140152137099312">at lade Herren raade;</l>
               <l xml:id="idm140152137098896">dog er det Livets Lykkestund</l>
               <l xml:id="idm140152137098464">at gribes af Guds Naade.</l>
            </lg>
         </div>
