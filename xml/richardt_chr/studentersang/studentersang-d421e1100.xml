         <div xml:id="workid55481" decls="#biblid55481">
            <head xml:id="idm139731449865280">Studentersang.</head>
            <lg xml:id="idm139731449864864">
               <l xml:id="idm139731449864608">Vi er et lystigt Folkefærd</l>
               <l xml:id="idm139731449864160">fra alle Verdens Kanter;</l>
               <l xml:id="idm139731449863728">vort Rige er saa noget nær</l>
               <l xml:id="idm139731449863280">et Bjerg af Folianter;</l>
               <l xml:id="idm139731449862864">men Ungdom gav os Indfødsret,</l>
               <l xml:id="idm139731449862400">hvor Lykken slaar sin Vinge,</l>
               <l xml:id="idm139731449861968">og hvor Druen voxer tæt,</l>
               <l xml:id="idm139731449861520">der samles vi paa Thinge.</l>
            </lg>
            <lg xml:id="idm139731449860960">
               <l xml:id="idm139731449860704">En Verden, spændt i Snørebaand,</l>
               <l xml:id="idm139731449860240">os passer ikke ganske;</l>
               <pb n="4" xml:id="s4" facs="adl/richardt/richardt1/rich1004"/>
               <l xml:id="idm139731449858720">der faar man ingen Vennehaand,</l>
               <l xml:id="idm139731449858288">men kun en Vennehandske;</l>
               <l xml:id="idm139731449857856">der dyrker man en Poesi,</l>
               <l xml:id="idm139731449857424">som skjæres paa Maskine;</l>
               <l xml:id="idm139731449856976">Kjernen mangler indeni,</l>
               <l xml:id="idm139731449856560">og Hakkelsen er det Fine.</l>
            </lg>
            <lg xml:id="idm139731449856000">
               <l xml:id="idm139731449855744">En Verden, hvor man ej kan see,</l>
               <l xml:id="idm139731449855312">for lutter Pengekister,</l>
               <l xml:id="idm139731449854896">den er et Ideal maaskee,</l>
               <l xml:id="idm139731449854464">men kun for en Filister;</l>
               <l xml:id="idm139731449854032">der brænder man Kamphin og Gas,</l>
               <l xml:id="idm139731449853568">men hvor er Solen henne!</l>
               <l xml:id="idm139731449853136">Engen er kun Blegeplads,</l>
               <l xml:id="idm139731449852704">og Skoven er kun Brænde.</l>
            </lg>
            <lg xml:id="idm139731449852128">
               <l xml:id="idm139731449851872">Men vi har Tro paa Solens Glans,</l>
               <l xml:id="idm139731449851440">naar blot vi see lidt Skygge,</l>
               <l xml:id="idm139731449851008">og vi tør trøstig binde Krans,</l>
               <l xml:id="idm139731449850544">før vi kan Huset bygge.</l>
               <l xml:id="idm139731449850096">Om Verden var et Hav af Graad,</l>
               <l xml:id="idm139731449849664">sang vi dog glade Sange:</l>
               <l xml:id="idm139731449849232">Haabet er en spinkel Baad,</l>
               <l xml:id="idm139731449848800">men den kan rumme Mange!</l>
            </lg>
            <pb n="5" xml:id="s5" facs="adl/richardt/richardt1/rich1005"/>
         </div>
