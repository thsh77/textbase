         <div xml:id="workid64359" decls="#biblid64359">
            <head xml:id="idm140152137184640">Lys Oktober.</head>
            <lg xml:id="idm140152137184224">
               <l xml:id="idm140152137183968">En lys Oktober,</l>
               <l xml:id="idm140152137183552">med gylden Bronce, tindrende Zinnober,</l>
               <l xml:id="idm140152137183120">med Navren hvidlig gul, med Egen grøn,</l>
               <l xml:id="idm140152137182640">med mangebroget Tæppe lagt for Daaen,</l>
               <l xml:id="idm140152137182160">med blanke Bær af Hyld og Tjørn og Slaaen,</l>
               <l xml:id="idm140152137181664">- hvor farverig og skjøn,</l>
               <l xml:id="idm140152137181216">trods Løvets Falmen, Falden og Forgaaen!</l>
            </lg>
            <lg xml:id="idm140152137180608">
               <l xml:id="idm140152137180352">De fjerne Banker</l>
               <l xml:id="idm140152137179936">i diset Blaanen ligge som i Tanker;</l>
               <l xml:id="idm140152137179504">det er som om de kunde løftes brat</l>
               <l xml:id="idm140152137179040">af bløde Taageskyers Ørne-Hamme</l>
               <l xml:id="idm140152137178576">højt over Jordens gyldenbrune Ramme,</l>
               <l xml:id="idm140152137178096">højt over Skov og Krat,</l>
               <l xml:id="idm140152137177648">og blive evig borte med det Samme.</l>
            </lg>
            <lg xml:id="idm140152137177088">
               <l xml:id="idm140152137176832">Lydt sladdrer Bækken,</l>
               <l xml:id="idm140152137176384">og Hasselnødden vinker end fra Hækken,</l>
               <l xml:id="idm140152137175904">hvor Beenved-Busken leger Rosengaard!</l>
               <l xml:id="idm140152137175472">Og Luften har saa dyb en Sommertone,</l>
               <l xml:id="idm140152137175040">og Rest af Sang i Resten af en Krone;</l>
               <l xml:id="idm140152137174608">og Skovens tynde Haar</l>
               <l xml:id="idm140152137174192">har i hvert Straaleglimt sin Pyntekone.</l>
            </lg>
            <lg xml:id="idm140152137173632">
               <l xml:id="idm140152137173376">Dog Lyset iler;</l>
               <l xml:id="idm140152137172960">veemodigt end Oktober-Dagen smiler -</l>
               <l xml:id="idm140152137172528">godt, at der er lidt Sol at ringe ned!</l>
               <pb n="79" facs="adl/richardt/richardt3/rich3079" xml:id="idm140152137172096"/>
               <l xml:id="idm140152137171280">Men Bedeslaget over Dødens Have</l>
               <l xml:id="idm140152137170816">faaer Svar af sære Uglelyd om Grave -</l>
               <l xml:id="idm140152137170336">det er som Døden skred</l>
               <l xml:id="idm140152137169888">forbi med Leen, mejende sin Trave.</l>
            </lg>
         </div>
