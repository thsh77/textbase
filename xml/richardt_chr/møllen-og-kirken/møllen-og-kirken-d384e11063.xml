         <div xml:id="workid75414" decls="#biblid75414">
            <head xml:id="idm140352321097824">Møllen og Kirken.</head>
            <lg xml:id="idm140352321097392">
               <l xml:id="idm140352321097136">Jeg veed et Sted i Lunden</l>
               <l xml:id="idm140352321096704">ved Højskovens Bred,</l>
               <l xml:id="idm140352321096256">hvor Bøgebanken skraaner</l>
               <l xml:id="idm140352321095808">mod Mosedraget ned;</l>
               <l xml:id="idm140352321095392">dér tegner sig et Billed</l>
               <l xml:id="idm140352321094944">i Bladrammens Grønt:</l>
               <l xml:id="idm140352321094496">en Landsby med sin Mølle,</l>
               <l xml:id="idm140352321094048">saa hyggeligt og kjønt.</l>
            </lg>
            <lg xml:id="idm140352321093472">
               <l xml:id="idm140352321093216">Den rappe Møllevinge</l>
               <l xml:id="idm140352321092768">mod Luftens lyse Mur,</l>
               <l xml:id="idm140352321092352">den er mig som en Viser</l>
               <l xml:id="idm140352321091936">paa Tidens travle Uhr;</l>
               <l xml:id="idm140352321091520">den raaber mig imøde:</l>
               <l xml:id="idm140352321091072">Brug Tiden, mens Du kan,</l>
               <l xml:id="idm140352321090640">thi Du er ikke altid</l>
               <l xml:id="idm140352321090224">i de Levendes Land!</l>
            </lg>
            <lg xml:id="idm140352321089680">
               <l xml:id="idm140352321089424">Og Kirken rødmer dobbelt</l>
               <l xml:id="idm140352321088976">i Aftensolens Skjær,</l>
               <l xml:id="idm140352321088528">og Bedeklokken kalder</l>
               <l xml:id="idm140352321088112">fra Arbejd Enhver;</l>
               <pb n="168" facs="adl/richardt/richardt2/rich2168" xml:id="idm140352321087696"/>
               <l xml:id="idm140352321086880">den maner alle flagrende</l>
               <l xml:id="idm140352321086448">Syner til Ro;</l>
               <l xml:id="idm140352321086032">den taler om Freden,</l>
               <l xml:id="idm140352321085616">om Haab og om Tro.</l>
            </lg>
            <lg xml:id="idm140352321085072">
               <l xml:id="idm140352321084816">Den første Gang, da Møllen</l>
               <l xml:id="idm140352321084352">slog ud de Vinger to,</l>
               <l xml:id="idm140352321083936">da syntes mig, den røved</l>
               <l xml:id="idm140352321083488">mig Kirkens stille Ro;</l>
               <l xml:id="idm140352321083072">den tvang sig ind i Rammen</l>
               <l xml:id="idm140352321082640">som Uro til Fred, -</l>
               <l xml:id="idm140352321082224">nu høre de mig sammen</l>
               <l xml:id="idm140352321081776">som Tid og Evighed.</l>
            </lg>
         </div>
