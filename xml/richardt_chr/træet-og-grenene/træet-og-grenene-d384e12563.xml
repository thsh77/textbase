         <div xml:id="workid78490" decls="#biblid78490">
            <head xml:id="idm140352320717120">Træet og Grenene.</head>
            <lg xml:id="idm140352320716688">
               <l xml:id="idm140352320716432">Gak ud i Skovens Hal, betragt dens Stammer!</l>
               <l xml:id="idm140352320715984">Hvor højst forskjelligt Kuld dens Jord end ammer,</l>
               <l xml:id="idm140352320715488">hver enkelt gaar igjen i sine Dele:</l>
               <pb n="194" facs="adl/richardt/richardt2/rich2194" xml:id="idm140352320715056"/>
               <l xml:id="idm140352320714240">hver Kvist, dit Øje saae,</l>
               <l xml:id="idm140352320713792">afbilder i det Smaa</l>
               <l xml:id="idm140352320713376">sin Stammes Hele.</l>
            </lg>
            <lg xml:id="idm140352320712832">
               <l xml:id="idm140352320712576">See Bøgekvisten gjør sin Moder efter!</l>
               <l xml:id="idm140352320712096">og Egens Green, hvor knudret, fuld af Kræfter!</l>
               <l xml:id="idm140352320711600">og Granens Foraarsskud, hvor rankt et Spiger!</l>
               <l xml:id="idm140352320711152">ja Green og Kvist og Naal,</l>
               <l xml:id="idm140352320710720">hver mod sin Eenheds Maal</l>
               <l xml:id="idm140352320710288">ustandset higer.</l>
            </lg>
            <lg xml:id="idm140352320709744">
               <l xml:id="idm140352320709488">
                  <hi rend="italics" xml:id="idm140352320709360">Og</hi> vi, - vil vi paa Christus være Grene,</l>
               <l xml:id="idm140352320708480">og suge Kraft og Saft af ham alene,</l>
               <l xml:id="idm140352320708048">og lade os i ham med Væxt velsigne,</l>
               <l xml:id="idm140352320707568">da visselig vi maa,</l>
               <l xml:id="idm140352320707152">om og kun i det Smaa,</l>
               <l xml:id="idm140352320706736">vor Vinstok ligne.</l>
            </lg>
            <lg xml:id="idm140352320706192">
               <l xml:id="idm140352320705936">Da maa vi højnes over Tidselvrimlen,</l>
               <l xml:id="idm140352320705456">og med vor Mester løftes imod Himlen,</l>
               <l xml:id="idm140352320704976">og villigt bindes op mod Korsets Planke,</l>
               <l xml:id="idm140352320704528">og efter hans Natur</l>
               <l xml:id="idm140352320704112">Guds Faderviljes Mur</l>
               <l xml:id="idm140352320703696">med Lyst omranke.</l>
            </lg>
            <lg xml:id="idm140352320703152">
               <l xml:id="idm140352320702896">Da skal det kjendes, vi blev Christi Grene!</l>
               <l xml:id="idm140352320702448">Hvad vi saa var, <hi rend="italics" xml:id="idm140352320702160">hans</hi> Kraft har gjort os rene.</l>
               <l xml:id="idm140352320701296">I <hi rend="italics" xml:id="idm140352320701040">ham</hi> og udaf ham vi Frugter bære:</l>
               <l xml:id="idm140352320700176">de Druer hedde Fred,</l>
               <l xml:id="idm140352320699760">Taalmod og Kjærlighed,</l>
               <l xml:id="idm140352320699312">hans Navn til Ære.</l>
            </lg>
            <pb n="195" facs="adl/richardt/richardt2/rich2195" xml:id="idm140352320698752"/>
