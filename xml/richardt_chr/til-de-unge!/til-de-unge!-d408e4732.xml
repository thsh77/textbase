         <div xml:id="workid63004" decls="#biblid63004">
            <head xml:id="idm140152137351680">Til de Unge!</head>
            <lg xml:id="idm140152137351264">
               <l xml:id="idm140152137351008">Aand og Legem er et Spand,</l>
               <l xml:id="idm140152137350576">som maa begge dygtig øves,</l>
               <l xml:id="idm140152137350128">før paa Livets glatte Vand</l>
               <l xml:id="idm140152137349680">de for Slæderne skal prøves!</l>
               <l xml:id="idm140152137349216">Gik en Stund de som paa Græs,</l>
               <l xml:id="idm140152137348752">begge to de maa i Sele;</l>
               <l xml:id="idm140152137348336">begge skal jo Møjen dele,</l>
               <l xml:id="idm140152137347888">gjælder det de tunge Læs.</l>
            </lg>
            <lg xml:id="idm140152137347312">
               <l xml:id="idm140152137347056">Spænd din Muskel under Sang,</l>
               <l xml:id="idm140152137346592">mens endnu Du kan Dig sole!</l>
               <l xml:id="idm140152137346160">Rul Dig i den grønne Vang,</l>
               <l xml:id="idm140152137345712">mens endnu Du hedder Fole!</l>
               <l xml:id="idm140152137345280">Træk paa Aaren! Sæt i Spring,</l>
               <l xml:id="idm140152137344816">spændstig selv som Flyve-Boldten!</l>
               <l xml:id="idm140152137344352">Lad kun Træet føle Volten!</l>
               <l xml:id="idm140152137343888">Skriv paa Isen Navne-Sving!</l>
            </lg>
            <lg xml:id="idm140152137343328">
               <l xml:id="idm140152137343072">Hold i Ave Kjød og Blod,</l>
               <l xml:id="idm140152137342624">at de Magten ej skal tage -</l>
               <l xml:id="idm140152137342192">Lysten med sit vilde Mod</l>
               <l xml:id="idm140152137341760">helst paa egen Haand vil jage!</l>
            </lg>
            <lg xml:id="idm140152137341200">
               <pb n="68" facs="adl/richardt/richardt3/rich3068" xml:id="idm140152137340944"/>
               <l xml:id="idm140152137340128">Tæm den, til den lystrer flink,</l>
               <l xml:id="idm140152137339664">til din Falk Du har paa Haanden,</l>
               <l xml:id="idm140152137339232">til Du drives kun af Aanden</l>
               <l xml:id="idm140152137338800">som af Fader-Øjets Blink!</l>
            </lg>
            <lg xml:id="idm140152137338224">
               <l xml:id="idm140152137337968">Sygne skal da Slægten ej -</l>
               <l xml:id="idm140152137337520">men din Barndoms gode Engel</l>
               <l xml:id="idm140152137337088">skal med hvide Lilje-Stængel</l>
               <l xml:id="idm140152137336624">lyse Ynglingen paa Vej!</l>
               <l xml:id="idm140152137336208">Trods hver Stormvind kold og barsk,</l>
               <l xml:id="idm140152137335776">trods de Suk hvoraf vi tynges,</l>
               <l xml:id="idm140152137335344">skal vort gamle Land forynges</l>
               <l xml:id="idm140152137334912">ved en Ungdom sund og karsk!</l>
            </lg>
         </div>
