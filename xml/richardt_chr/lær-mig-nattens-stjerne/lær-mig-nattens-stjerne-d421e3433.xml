   <text>
      <body>
         <div xml:id="workid60262" decls="#biblid60262">
            <head xml:id="idm139731449270672">Lær mig.</head>
            <lg xml:id="idm139731449270256">
               <l xml:id="idm139731449270000">Lær mig Nattens Stjerne</l>
               <l xml:id="idm139731449269552">at lyde fast og gjerne!</l>
               <l xml:id="idm139731449269136">Ej at vige fra den Vej,</l>
               <l xml:id="idm139731449268720">Himlens Gud tilmaalte mig!</l>
               <l xml:id="idm139731449268288">Lær mig Nattens Stjerne!</l>
            </lg>
            <lg xml:id="idm139731449267712">
               <l xml:id="idm139731449267456">Lær mig Markens Blommer</l>
               <l xml:id="idm139731449267008">at bie paa min Sommer,</l>
               <l xml:id="idm139731449266592">midt i Verdens dybe Vee</l>
               <l xml:id="idm139731449266176">at spire under Vintersnee!</l>
            </lg>
            <lg xml:id="idm139731449265616">
               <l xml:id="idm139731449265360">Lær mig golde Hede,</l>
               <l xml:id="idm139731449264912">Du brune Lærkerede,</l>
               <l xml:id="idm139731449264464">nøjet med en fattig Høst,</l>
               <l xml:id="idm139731449264016">at huse Sangen ved mit Bryst!</l>
            </lg>
            <lg xml:id="idm139731449263456">
               <l xml:id="idm139731449263200">Havets Bølge-Hære,</l>
               <l xml:id="idm139731449262752">lær mig mit Aag at bære,</l>
               <l xml:id="idm139731449262304">og som I, naar Sol gaar ned,</l>
               <l xml:id="idm139731449261872">at spejle lidt af Himlens Fred!</l>
            </lg>
            <pb n="46" xml:id="s46" facs="adl/richardt/richardt1/rich1046"/>
            <lg xml:id="idm139731449260096">
               <l xml:id="idm139731449259840">Lær mig grønne Lunde</l>
               <l xml:id="idm139731449259392">at skygge, om jeg kunde,</l>
               <l xml:id="idm139731449258960">hver som kommer mig forbi,</l>
               <l xml:id="idm139731449258528">Ven og Fjende paa min Sti!</l>
            </lg>
            <lg xml:id="idm139731449257968">
               <l xml:id="idm139731449257712">Sol i Aftensvale,</l>
               <l xml:id="idm139731449257296">lær mig den Kunst at dale!</l>
               <l xml:id="idm139731449256848">Kun mod Nattens Dyb at gaa,</l>
               <l xml:id="idm139731449256416">for nyfødt atter at opstaa!</l>
               <l xml:id="idm139731449255952">Lær mig Sol at dale!</l>
            </lg>
