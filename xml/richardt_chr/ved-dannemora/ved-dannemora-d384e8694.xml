         <div xml:id="workid70666" decls="#biblid70666">
            <head xml:id="idm140352321682112">Ved Dannemora.<lb xml:id="idm140352321681824"/>(Den 5. Juni 1875.)</head>
            <lg xml:id="idm140352321681408">
               <l xml:id="idm140352321681152">En Urskov uden Kroner,</l>
               <l xml:id="idm140352321680736">og uden Fuglesang,</l>
               <l xml:id="idm140352321680320">med Malm for Anemoner,</l>
               <l xml:id="idm140352321679904">med Steen for grønne Vang!</l>
               <l xml:id="idm140352321679456">Du kolde, mørke Øde,</l>
               <l xml:id="idm140352321679008">hvor ingen Lysalf bor,</l>
               <l xml:id="idm140352321678592">har til vort Ungdomsmøde</l>
               <l xml:id="idm140352321678144">din Løndom intet Ord?</l>
            </lg>
            <lg xml:id="idm140352321677568">
               <l xml:id="idm140352321677312">Jo, - <hi rend="italics" xml:id="idm140352321677024">Dybets</hi> røde Flamme</l>
               <l xml:id="idm140352321676160">os tyst fortælle vil,</l>
               <pb n="128" facs="adl/richardt/richardt2/rich2128" xml:id="idm140352321675712"/>
               <l xml:id="idm140352321674896">at Ild var Jordens Amme,</l>
               <l xml:id="idm140352321674464">at end hun dier Ild!</l>
               <l xml:id="idm140352321674048">Og vi, om vi vil vinde</l>
               <l xml:id="idm140352321673632">i Livets Kæmpespil,</l>
               <l xml:id="idm140352321673184">da maa vi dybest inde</l>
               <l xml:id="idm140352321672768">bevare Aandens Ild!</l>
            </lg>
            <lg xml:id="idm140352321672224">
               <l xml:id="idm140352321671968">Og det er <hi rend="italics" xml:id="idm140352321671680">Staalets</hi> Lære:</l>
               <l xml:id="idm140352321670832">at altfor hidsig Brand</l>
               <l xml:id="idm140352321670416">kan hærde, men fortære,</l>
               <l xml:id="idm140352321669968">som Lidenskaben kan;</l>
               <l xml:id="idm140352321669552">men svales det og glødes</l>
               <l xml:id="idm140352321669104">i stærke Tvillingbad,</l>
               <l xml:id="idm140352321668656">saa mild en Kraft der fødes</l>
               <l xml:id="idm140352321668192">som Kjærlighed af Had!</l>
            </lg>
            <lg xml:id="idm140352321667616">
               <l xml:id="idm140352321667360">Og <hi rend="italics" xml:id="idm140352321667104">Slaggerne</hi> de mørke</l>
               <l xml:id="idm140352321666256">den simple Viisdom har:</l>
               <l xml:id="idm140352321665840">at, vil Du vinde Styrke</l>
               <l xml:id="idm140352321665424">og vorde brugbart Kar,</l>
               <l xml:id="idm140352321665008">da maa Du ej hoffærdig</l>
               <l xml:id="idm140352321664560">gaa Smeltningen forbi, -</l>
               <l xml:id="idm140352321664128">til Kar er Du først værdig,</l>
               <l xml:id="idm140352321663664">naar Du er slaggefri!</l>
            </lg>
            <lg xml:id="idm140352321663120">
               <l xml:id="idm140352321662864">- Men fra de dybe <hi rend="italics" xml:id="idm140352321662576">Malme</hi>
               </l>
               <l xml:id="idm140352321661760">der gaar en Klokkeklang,</l>
               <l xml:id="idm140352321661328">der stiger op en Psalme</l>
               <l xml:id="idm140352321660912">mod Birkens lyse Hang!</l>
               <l xml:id="idm140352321660496">Den jubler, at i Krypten</l>
               <l xml:id="idm140352321660064">er Himlen lige nær:</l>
               <pb n="129" facs="adl/richardt/richardt2/rich2129" xml:id="idm140352321659616"/>
               <l xml:id="idm140352321658800">»Ja, fo'r jeg ned i Dybden,</l>
               <l xml:id="idm140352321658368">min Gud, da var Du dér!«</l>
            </lg>
