         <div xml:id="workid69112" decls="#biblid69112">
            <head xml:id="idm139731448183616">Til Georg Forchhammer.<lb xml:id="idm139731448183328"/>(Den 19 Decbr. 1857.)</head>
            <lg xml:id="idm139731448182912">
               <l xml:id="idm139731448182656">Et Land foruden Grænser</l>
               <l xml:id="idm139731448182208">er Videnskabens Land,</l>
               <l xml:id="idm139731448181792">som Maalebrev ej ændser</l>
               <l xml:id="idm139731448181344">og maales ikke kan;</l>
               <l xml:id="idm139731448180928">af Tidens dybe Vande</l>
               <l xml:id="idm139731448180512">bestandig skjød sig op</l>
               <l xml:id="idm139731448180064">heel ubekjendte Strande</l>
               <l xml:id="idm139731448179648">med nyfødt Bjergetop.</l>
            </lg>
            <lg xml:id="idm139731448179072">
               <l xml:id="idm139731448178816">Did hasted Du i Aanden,</l>
               <l xml:id="idm139731448178400">der hegned Du en Plads,</l>
               <l xml:id="idm139731448177984">Nybyggerstav i Haanden</l>
               <l xml:id="idm139731448177568">og Øjet til Kompas;</l>
               <l xml:id="idm139731448177120">Du dyrked op Savanner,</l>
               <l xml:id="idm139731448176704">fik skabt en Koloni,</l>
               <l xml:id="idm139731448176288">og planted Danmarks Banner,</l>
               <l xml:id="idm139731448175856">hvor Ingen kjendte Sti.</l>
            </lg>
            <pb n="120" xml:id="s120" facs="adl/richardt/richardt1/rich1120"/>
            <lg xml:id="idm139731448174128">
               <l xml:id="idm139731448173872">Og Skatten som Du øste</l>
               <l xml:id="idm139731448173424">af dybest Fjeldespalt,</l>
               <l xml:id="idm139731448173008">dens sejge Malm opløste</l>
               <l xml:id="idm139731448172560">din Tankes stærke Salt;</l>
               <l xml:id="idm139731448172112">saa deelte Du dit Bytte</l>
               <l xml:id="idm139731448171696">med hver som til Dig kom,</l>
               <l xml:id="idm139731448171264">med hver som vilde lytte</l>
               <l xml:id="idm139731448170832">til Videnskabens Dom.</l>
            </lg>
            <lg xml:id="idm139731448170288">
               <l xml:id="idm139731448170032">Ja Du har Hjem og hjemme</l>
               <l xml:id="idm139731448169600">i Danmarks Lærdomsgaard,</l>
               <l xml:id="idm139731448169152">saa Bryllupsklokkens Stemme</l>
               <l xml:id="idm139731448168720">kan svulme til et Kor,</l>
               <l xml:id="idm139731448168304">hvis Tonebølger favne</l>
               <l xml:id="idm139731448167856">Højskolens gamle Mur</l>
               <l xml:id="idm139731448167408">med <hi rend="italics" xml:id="idm139731448167120">Dit</hi> og <hi rend="italics" xml:id="idm139731448166384">Ørsteds</hi> Navne</l>
               <l xml:id="idm139731448165536">i samme Klangngur!</l>
            </lg>
         </div>
