         <div xml:id="workid88016" decls="#biblid88016">
            <head xml:id="idm139731445884080">Concert-Indledning.*)<lb xml:id="idm139731445883792"/>1866.<lb xml:id="idm139731445883504"/>Musik af I. P. E. Hartmann.</head>
            <lg xml:id="idm139731445883072">
               <head xml:id="idm139731445882816">Solo.</head>
               <lg xml:id="idm139731445882400">
                  <l xml:id="idm139731445882144">Fra sidste Gang</l>
                  <l xml:id="idm139731445881728">Studentersang</l>
                  <l xml:id="idm139731445881312">mod disse Lofter runged,</l>
                  <l xml:id="idm139731445880880">fra sidst til nu -</l>
                  <l xml:id="idm139731445880464">hvad Kamp og Gru,</l>
               </lg>
            </lg>
            <note anchored="true" xml:id="idm139731445879792">*) Da Universitetets nysmykkede Festsal første Gang benyttedes.</note>
            <pb n="273" xml:id="s273" facs="adl/richardt/richardt1/rich1273"/>
            <lg xml:id="idm139731445877792">
               <lg xml:id="idm139731445877536">
                  <l xml:id="idm139731445877280">hvor vredt har Nornen sjunget!</l>
                  <l xml:id="idm139731445876848">Hvad Mandefald,</l>
                  <l xml:id="idm139731445876432">hvad Landefald!</l>
                  <l xml:id="idm139731445876016">Hvor dybt blev Danmark stunget!</l>
               </lg>
               <lg xml:id="idm139731445875456">
                  <l xml:id="idm139731445875200">Mens Hallen her</l>
                  <l xml:id="idm139731445874784">fik Farveskjær,</l>
                  <l xml:id="idm139731445874352">gik Skyen over Lande;</l>
                  <l xml:id="idm139731445873936">mens Mur og Væg</l>
                  <l xml:id="idm139731445873504">fik gyldne Læg,</l>
                  <l xml:id="idm139731445873072">fik Flaget mørke Rande;</l>
                  <l xml:id="idm139731445872624">saa denne Slægt,</l>
                  <l xml:id="idm139731445872192">som drømte kjækt,</l>
                  <l xml:id="idm139731445871760">maa gaa med sænket Pande.</l>
               </lg>
            </lg>
            <lg xml:id="idm139731445871056">
               <head xml:id="idm139731445870800">Kor.</head>
               <lg xml:id="idm139731445870384">
                  <l xml:id="idm139731445870128">Men vær et Varsel, skjønne Hal,</l>
                  <l xml:id="idm139731445869664">om andre, bedre Dage,</l>
                  <l xml:id="idm139731445869248">da Danmarks Hus forynges skal</l>
                  <l xml:id="idm139731445868816">og komme under Tage,</l>
                  <l xml:id="idm139731445868400">da Muren atter vorder stærk,</l>
                  <l xml:id="idm139731445867936">da sprænges skal det Skilleværk,</l>
                  <l xml:id="idm139731445867472">som Løgn og Vold har tømret,</l>
                  <l xml:id="idm139731445867008">og ingen Broder længselsfuld,</l>
                  <l xml:id="idm139731445866544">med bastet Haand men tro som Guld</l>
                  <l xml:id="idm139731445866112">staa udenfor bekymret.</l>
               </lg>
               <lg xml:id="idm139731445865568">
                  <l xml:id="idm139731445865312">Ja hvert et Billed, som gaar frem</l>
                  <l xml:id="idm139731445864880">af hine tomme Rammer</l>
                  <l xml:id="idm139731445864464">med Minder fra vort Fædrehjem</l>
                  <l xml:id="idm139731445864000">om Aandens stærke Flammer,</l>
                  <pb n="274" xml:id="s274" facs="adl/richardt/richardt1/rich1274"/>
                  <l xml:id="idm139731445862304">skal spejle sig i Sjæl og Sind</l>
                  <l xml:id="idm139731445861840">og kalde Liv og Lys derind</l>
                  <l xml:id="idm139731445861408">og alle Kræfter ægge,</l>
                  <l xml:id="idm139731445860960">saa hvad der end er graat og tungt</l>
                  <l xml:id="idm139731445860528">maa blive lyst og let og ungt</l>
                  <l xml:id="idm139731445860096">som inden disse Vægge.</l>
               </lg>
            </lg>
