         <div xml:id="workid70735" decls="#biblid70735">
            <head xml:id="idm140152136408256">Den ene og samme.</head>
            <lg xml:id="idm140152136407840">
               <l xml:id="idm140152136407584">Den Vældige, hvis Almagts-Haand</l>
               <l xml:id="idm140152136407120">har tændt de tusind Sole,</l>
               <pb n="128" facs="adl/richardt/richardt3/rich3128" xml:id="idm140152136406672"/>
               <l xml:id="idm140152136405856">har flettet Lysets Straalebaand,</l>
               <l xml:id="idm140152136405424">og tvættet Liljens Kjole -</l>
               <l xml:id="idm140152136404976">den Gud, som byder saa det skeer,</l>
               <l xml:id="idm140152136404544">hvis Øje gjennem Mulmet seer,</l>
               <l xml:id="idm140152136404080">han er den evig samme,</l>
               <l xml:id="idm140152136403664">som tændte i et Kar af Leer</l>
               <l xml:id="idm140152136403200">en Gnist af Aandens Flamme.</l>
            </lg>
            <lg xml:id="idm140152136402640">
               <l xml:id="idm140152136402384">Og den <hi rend="italics" xml:id="idm140152136402096">Naturens</hi> stærke Gud,</l>
               <l xml:id="idm140152136401232">som Jord og Maane kobler,</l>
               <l xml:id="idm140152136400800">hvis Mund har aandet Verdner ud</l>
               <l xml:id="idm140152136400368">som Barnet Sæbebobler -</l>
               <l xml:id="idm140152136399920">ham er det, som i Mandens Bryst</l>
               <l xml:id="idm140152136399488">har lagt et Ekko af sin Røst,</l>
               <l xml:id="idm140152136399024">han er den evig samme,</l>
               <l xml:id="idm140152136398608">for hvem hver Sjæl fra Støvets Kyst</l>
               <l xml:id="idm140152136398128">sig skjule maa og skamme.</l>
            </lg>
            <lg xml:id="idm140152136397568">
               <l xml:id="idm140152136397312">Og han, hvis sidste store Dom</l>
               <l xml:id="idm140152136396880">er som et Fjeldskreds Knusen,</l>
               <l xml:id="idm140152136396448">ham er det, som til Horeb kom</l>
               <l xml:id="idm140152136396016">i Aandens stille Susen!</l>
               <l xml:id="idm140152136395600">Ja den <hi rend="italics" xml:id="idm140152136395312">Samvittighedens</hi> Gud,</l>
               <l xml:id="idm140152136394464">som skrev i Steen sit strænge Bud,</l>
               <l xml:id="idm140152136394000">han er den evig samme,</l>
               <l xml:id="idm140152136393584">som podet har sit Rosenskud</l>
               <l xml:id="idm140152136393152">paa Adams Tjørnestamme.</l>
            </lg>
            <lg xml:id="idm140152136392576">
               <l xml:id="idm140152136392320">Og ej er Han, som gav os Fred,</l>
               <l xml:id="idm140152136391888">fra Skaberen forskjellig;</l>
               <l xml:id="idm140152136391456">den Gud, hvis Dyb er Kjærlighed,</l>
               <pb n="129" facs="adl/richardt/richardt3/rich3129" xml:id="idm140152136390992"/>
               <l xml:id="idm140152136390224">retfærdig er og hellig;</l>
               <l xml:id="idm140152136389776">men naar hans Lov om Sæd og Høst</l>
               <l xml:id="idm140152136389312">vil skræmme Haabet af mit Bryst,</l>
               <l xml:id="idm140152136388848">og knusende mig ramme,</l>
               <l xml:id="idm140152136388432">har <hi rend="italics" xml:id="idm140152136388144">Naadens</hi> Gud en Sæd til Trøst,</l>
               <l xml:id="idm140152136387264">thi han - han er den samme.</l>
            </lg>
