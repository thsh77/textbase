            <body xml:id="idm140721238440640">
               <head xml:id="idm140721238440384"> Paa Kalk og Disk i Slangerup Kirke. <lb xml:id="idm140721238440080"/>
               </head>
               <lg xml:id="idm140721238439696">
                  <l xml:id="idm140721238439440">VOr Kalk og Disk blev smelt,</l>
                  <l xml:id="idm140721238439008">I Jord og Støv nedvdt</l>
                  <l xml:id="idm140721238438560">I Herrens Ild og Vrede</l>
                  <l xml:id="idm140721238438144">d. 29 Marts 1672.</l>
               </lg>
               <lg xml:id="idm140721238437600">
                  <l xml:id="idm140721238437344">Gid Hjertet smelte maa.</l>
                  <l xml:id="idm140721238436928">Før det selv bliver Straa</l>
                  <l xml:id="idm140721238436480">I Herrens Grumheds Hede.</l>
               </lg>
