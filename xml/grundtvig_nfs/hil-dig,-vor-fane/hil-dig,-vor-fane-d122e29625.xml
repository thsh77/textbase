   <text>
      <body>
         <div xml:id="workid116006" decls="#biblid116006">
            <head xml:id="idm140571805259328">
               <hi rend="bold" xml:id="idm140571805259072">
                  <hi rend="italics" xml:id="idm140571805258544">No. 133.</hi>
               </hi>
               <lb xml:id="idm140571805257728"/>
               <hi rend="bold" xml:id="idm140571805257472">
                  <hi rend="italics" xml:id="idm140571805256944">Dannebrog.</hi>
               </hi>
            </head>
            <stage type="mix" xml:id="idm140571805256000">Egen Melodi af
                     <hi rend="italics" xml:id="idm140571805255456">J. P. E. Hartmann</hi>
.</stage>
            <lg xml:id="idm140571805254640">
               <l xml:id="idm140571805254384">Hil dig, vor Fane!</l>
               <l xml:id="idm140571805253968">Korsbanner hvidt!</l>
               <l xml:id="idm140571805253552">Holde paa Bane</l>
               <l xml:id="idm140571805253136">Med dig vi Skridt,</l>
               <l xml:id="idm140571805252720">Vis er os Kraiidsen,</l>
               <l xml:id="idm140571805252304">Gyldenaars-Glandsen!</l>
               <l xml:id="idm140571805251888">Danskerne følge dig frit!</l>
            </lg>
            <lg xml:id="idm140571805251312">
               <l xml:id="idm140571805251056">Fienderne grue,</l>
               <l xml:id="idm140571805250640">Meer end for Sværd,</l>
               <l xml:id="idm140571805250192">Ved dig at skue,</l>
               <l xml:id="idm140571805249776">Plantet dem nær;</l>
               <l xml:id="idm140571805249344">Hvor du dig hæver,</l>
               <l xml:id="idm140571805248912">Seier omsvæver</l>
               <l xml:id="idm140571805248480">Korsherrens signede Hær!</l>
            </lg>
            <lg xml:id="idm140571805247904">
               <l xml:id="idm140571805247648">Kiærlig omfavned</l>
               <l xml:id="idm140571805247216">Dig Dannemænd,</l>
               <l xml:id="idm140571805246784">Dannebrogs -Navnet</l>
               <l xml:id="idm140571805246368">Bærer du end,</l>
               <l xml:id="idm140571805245936">Himlen til Ære</l>
               <l xml:id="idm140571805245504">Altid du bære</l>
               <l xml:id="idm140571805245072">Navnet med Seier igien!</l>
            </lg>
            <lg xml:id="idm140571805244528">
               <l xml:id="idm140571805244272">Hjem-Kiærligheden</l>
               <l xml:id="idm140571805243840">Boer os i Bryst,</l>
               <l xml:id="idm140571805243424">Striden for Freden</l>
               <l xml:id="idm140571805243008">Kun er vor Lyst,</l>
               <l xml:id="idm140571805242592">Odde og Egge</l>
               <pb n="385" xml:id="s385" facs="adl/grundtvig/grundtvig12/grun12385"/>
               <l xml:id="idm140571805240928">Kun for dem begge</l>
               <l xml:id="idm140571805240512">Skærpet vi har til en Dyst!</l>
            </lg>
            <lg xml:id="idm140571805239920">
               <l xml:id="idm140571805239664">Hil dig, vor Fane!</l>
               <l xml:id="idm140571805239248">Kors-Banner hvidt!</l>
               <l xml:id="idm140571805238832">Du paa din Bane</l>
               <l xml:id="idm140571805238416">Overfløi tit,</l>
               <l xml:id="idm140571805237984">Høiere oppe,</l>
               <l xml:id="idm140571805237552">Aandernes Troppe,</l>
               <l xml:id="idm140571805237136">Seieren følger dig frit!</l>
            </lg>
