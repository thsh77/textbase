            <head xml:id="idm140571805852832">
               <hi rend="bold" xml:id="idm140571805852576">
                  <hi rend="italics" xml:id="idm140571805852048">No. 123.</hi>
               </hi>
               <lb xml:id="idm140571805851232"/>
               <hi rend="bold" xml:id="idm140571805850976">
                  <hi rend="italics" xml:id="idm140571805850448">Sangværket.</hi>
               </hi>
            </head>
            <stage type="mix" xml:id="idm140571805849488">Egen Melodi af
                     <hi rend="italics" xml:id="idm140571805848944">L. M. Lindeman</hi>
.</stage>
            <lg xml:id="idm140571805848128">
               <l xml:id="idm140571805847872">Thomas Kingo er Psalmisten</l>
               <l xml:id="idm140571805847440">I det Danske Kirke-Kor,</l>
               <l xml:id="idm140571805847024">Det skal mindes af hver Christen,</l>
               <l xml:id="idm140571805846592">Mens der synges sødt i Nord</l>
               <l xml:id="idm140571805846128">Om hvad det for os betyder,</l>
               <l xml:id="idm140571805845696">Naar »den gyldne Soel frembryder.«</l>
            </lg>
            <lg xml:id="idm140571805845088">
               <l xml:id="idm140571805844832">Her paa Marken født og baaret,</l>
               <l xml:id="idm140571805844368">Han sin Moder havde kiær,</l>
               <l xml:id="idm140571805843920">Godt for Tungebaand og skaaret,</l>
               <l xml:id="idm140571805843488">Om end Skotsk af Folkefærd;</l>
               <l xml:id="idm140571805843024">Sange hans i Søndags-Klæder,</l>
               <l xml:id="idm140571805842560">De er alle Høitids-Kvæder.</l>
            </lg>
            <pb n="354" xml:id="s354" facs="adl/grundtvig/grundtvig12/grun12354"/>
            <lg xml:id="idm140571805840768">
               <l xml:id="idm140571805840512">Herrens Storværk, Død og Pine,</l>
               <l xml:id="idm140571805840048">Hans Opreisning, Himmelfart,</l>
               <l xml:id="idm140571805839616">Hans Besøg hos alle Sine</l>
               <l xml:id="idm140571805839168">Og hans Raab: jeg kommer snart,</l>
               <l xml:id="idm140571805838736">Det var Kingos Skjalde-Aare,</l>
               <l xml:id="idm140571805838304">Rig paa Smil igiennem Taare!</l>
            </lg>
            <lg xml:id="idm140571805837744">
               <l xml:id="idm140571805837488">Derfor har den Danske Kirke</l>
               <l xml:id="idm140571805837056">Under Dannebrog en Vold,</l>
               <l xml:id="idm140571805836624">Som maa kaldes
                        <hi rend="italics" xml:id="idm140571805836320">Skjalde-Virke</hi>
,</l>
               <l xml:id="idm140571805835504">Mod den Kirkebakke-Trold,</l>
               <l xml:id="idm140571805835072">Der, for noget at udrette,</l>
               <l xml:id="idm140571805834640">Korsets Tegn maa først udslette!</l>
            </lg>
            <lg xml:id="idm140571805834048">
               <l xml:id="idm140571805833792">Thi hvor Kingo-Sangen lyder</l>
               <l xml:id="idm140571805833360">Med Guds Julebud i Kor,</l>
               <l xml:id="idm140571805832944">Der den gyldne Soel frembryder</l>
               <l xml:id="idm140571805832512">Giennem kulsort Sky i Nord,</l>
               <l xml:id="idm140571805832080">Hvor korsfæstet sig mon bøie</l>
               <l xml:id="idm140571805831616">Himmelsk
                        <hi rend="italics" xml:id="idm140571805831312">Jesus</hi>
for vort Øie.</l>
            </lg>
            <lg xml:id="idm140571805830320">
               <l xml:id="idm140571805830064">Mens de Danske Tunger Blade</l>
               <l xml:id="idm140571805829632">Er i Kingos Psalmebog,</l>
               <l xml:id="idm140571805829216">Skal i Solskins-Regn sig bade</l>
               <l xml:id="idm140571805828784">Korsets Tegn med Dannebrog,</l>
               <l xml:id="idm140571805828352">Staaer i Nord den Danske Kirke</l>
               <l xml:id="idm140571805827920">Som et christnet Dannevirke!</l>
            </lg>
