         <div xml:id="workid81092" decls="#biblid81092">
            <head xml:id="idm140571809552464">
               <hi rend="bold" xml:id="idm140571809552208">
                  <hi rend="italics" xml:id="idm140571809551808">No</hi>
. 52.</hi>
               <lb xml:id="idm140571809550992"/>
               <hi rend="bold" xml:id="idm140571809550736">
                  <hi rend="italics" xml:id="idm140571809550336">Naboths Viingaard</hi>
.</hi>
            </head>
            <stage type="mix" xml:id="idm140571809549392">Egen Melodi af
                     <hi rend="italics" xml:id="idm140571809548848">C. Barnekow</hi>
.</stage>
            <lg xml:id="idm140571809548032">
               <l xml:id="idm140571809547776">
                  <hi rend="italics" xml:id="idm140571809547648">Naboths</hi>
Viingaard grændsed tæt</l>
               <l xml:id="idm140571809546768">Op til Kongens Have,</l>
               <l xml:id="idm140571809546352">Var en lille frugtbar Plet</l>
               <l xml:id="idm140571809545920">Mellem Fædres Grave,</l>
               <l xml:id="idm140571809545472">Der han i sit Ansigts Sved,</l>
               <l xml:id="idm140571809545040">Lykkelig ved Nøisomhed,</l>
               <l xml:id="idm140571809544592">Aad sit Brød med Ære.</l>
            </lg>
            <lg xml:id="idm140571809544016">
               <l xml:id="idm140571809543760">Nu han gammel var og graa,</l>
               <l xml:id="idm140571809543328">Guld han agted ringe,</l>
               <l xml:id="idm140571809542912">Turde paa sin Ret dog staae,</l>
               <l xml:id="idm140571809542480">Lod sig nødig tvinge,</l>
               <l xml:id="idm140571809542032">Kun forgjæves Kongen bød</l>
               <l xml:id="idm140571809541584">Guld ham for hans Drue rød</l>
               <l xml:id="idm140571809541136">Og hans Fædres Grave!</l>
            </lg>
            <lg xml:id="idm140571809540560">
               <l xml:id="idm140571809540304">Syg af ond Begjærlighed</l>
               <l xml:id="idm140571809539856">Efter Blomster-Støvet,</l>
               <l xml:id="idm140571809539408">Kongen sank paa Leiet ned,</l>
               <l xml:id="idm140571809538976">Bitterlig bedrøvet</l>
               <l xml:id="idm140571809538544">Over Naboths Odels-Ret,</l>
               <l xml:id="idm140571809538128">Over Savnet af den Plet</l>
               <l xml:id="idm140571809537712">Til en Kiøkken-Have.</l>
            </lg>
            <lg xml:id="idm140571809537136">
               <l xml:id="idm140571809536880">Det var Dronning
                        <hi rend="italics" xml:id="idm140571809536560">Jesabel</hi>
,</l>
               <l xml:id="idm140571809535744">Dristig til det Onde;</l>
               <l xml:id="idm140571809535328">Hun, som trodsed Ret og Skjel</l>
               <l xml:id="idm140571809534896">Til hun gik i Hunde,</l>
               <pb n="170" xml:id="s170" facs="adl/grundtvig/grundtvig12/grun12170"/>
               <l xml:id="idm140571809533232">Hun for Sengen gik at staae,</l>
               <l xml:id="idm140571809532800">Hvor med Sorgen
                        <hi rend="italics" xml:id="idm140571809532480">Akab</hi>
laae</l>
               <l xml:id="idm140571809531632">Uden Mad og Drikke.</l>
            </lg>
            <lg xml:id="idm140571809531088">
               <l xml:id="idm140571809530832">Du er mig en herlig Drot,</l>
               <l xml:id="idm140571809530400">Listig sagde Skarnet,</l>
               <l xml:id="idm140571809529984">For en trodsig Undersaat</l>
               <l xml:id="idm140571809529552">Græder du som Barnet!</l>
               <l xml:id="idm140571809529104">Skam dig dog, staa op og spiis,</l>
               <l xml:id="idm140571809528672">Naboths Viingaard til den Priis</l>
               <l xml:id="idm140571809528240">Sælger dig din Dronning!</l>
            </lg>
            <lg xml:id="idm140571809527664">
               <l xml:id="idm140571809527408">Budt blev Naboth da til Giæst</l>
               <l xml:id="idm140571809526944">Alt som Offer-Lammet,</l>
               <l xml:id="idm140571809526528">Kjøbte Munde ved den Fest</l>
               <l xml:id="idm140571809526080">Vidned uforskammet:</l>
               <l xml:id="idm140571809525664">Naboth synes gild og gjæv,</l>
               <l xml:id="idm140571809525216">Er dog kun en gammel Ræv,</l>
               <l xml:id="idm140571809524768">Majestæts-Forbryder!</l>
            </lg>
            <lg xml:id="idm140571809524192">
               <l xml:id="idm140571809523936">Stenet blev den Mand saa from,</l>
               <l xml:id="idm140571809523504">Misted Liv for Hytte,</l>
               <l xml:id="idm140571809523088">Kongen brat med Glæde kom,</l>
               <l xml:id="idm140571809522640">Synede sit Bytte,</l>
               <l xml:id="idm140571809522224">Mødte paa den dyre Jord</l>
               <l xml:id="idm140571809521776">Som et Lyn dog Herrens Ord,</l>
               <l xml:id="idm140571809521344">Sank i Sæk og Aske!</l>
            </lg>
            <lg xml:id="idm140571809520768">
               <l xml:id="idm140571809520512">Ja,
                        <hi rend="italics" xml:id="idm140571809520208">Elias</hi>
for ham stod</l>
               <l xml:id="idm140571809519360">Med Guds Ord fuldrene:</l>
               <l xml:id="idm140571809518944">Der, hvor Hunde Naboths Blod</l>
               <l xml:id="idm140571809518512">Slikket har af Stene,</l>
               <l xml:id="idm140571809518096">Der de slikke skal og dit,</l>
               <l xml:id="idm140571809517664">Stammen din, jeg siger frit,</l>
               <l xml:id="idm140571809517232">Rykkes op med Rode!</l>
            </lg>
            <pb n="171" xml:id="s171" facs="adl/grundtvig/grundtvig12/grun12171"/>
            <lg xml:id="idm140571809515488">
               <l xml:id="idm140571809515232">Saa Uskyldighed paa Jord</l>
               <l xml:id="idm140571809514800">Tit endnu maa bløde,</l>
               <l xml:id="idm140571809514352">Dyrt, det vidner dog Guds Ord,</l>
               <l xml:id="idm140571809513920">Falskheden skal bøde;</l>
               <l xml:id="idm140571809513472">Sandhed lever op paany,</l>
               <l xml:id="idm140571809513056">Falskhed synker som et Bly</l>
               <l xml:id="idm140571809512624">Evig i Afgrunden!</l>
            </lg>
         </div>
