         <div xml:id="workid83918" decls="#biblid83918">
            <head xml:id="idm140312756762192">1 MAI 1866</head>
            <lg xml:id="idm140312756761776">
               <l xml:id="idm140312756761520">Himlen er saa mørk at see,</l>
               <l xml:id="idm140312756761072">Vaade Skyer, graae som Bly!</l>
               <l xml:id="idm140312756760640">Blæsten rider Mai i By,</l>
               <l xml:id="idm140312756760192">Pidsker løs med Regn og Sne: -</l>
               <l xml:id="idm140312756759728">Vel jeg veed, hvor helst jeg var,</l>
               <l xml:id="idm140312756759296">Hvor nu Himlen blaaner klar,</l>
               <l xml:id="idm140312756758864">Hvor en ny livsalig Vaar</l>
               <l xml:id="idm140312756758432">Gjennem Land og Hjerter gaaer,</l>
               <l xml:id="idm140312756758000">Jagende den sidste Rest</l>
               <l xml:id="idm140312756757584">Bort af fremmed Kuld og Blæst; -</l>
               <l xml:id="idm140312756757120">Nu jeg styre maa som Trøst</l>
               <l xml:id="idm140312756756672">Til de gamle Minders Kyst:</l>
               <l xml:id="idm140312756756240">Duen flyver paa mit Bud</l>
               <l xml:id="idm140312756755824">Fra min Ark i Regnen ud,</l>
               <l xml:id="idm140312756755392">Bringer mig tilbage vist</l>
               <l xml:id="idm140312756754960">I sit Næb en lille Qvist,</l>
               <l xml:id="idm140312756754512">Ja, selv for et ringe Blad</l>
               <l xml:id="idm140312756754080">Er taknemlig jeg og glad!</l>
            </lg>
            <pb n="279" xml:id="s279" facs="adl/boedtcher/boedtcher1/boed1279"/>
