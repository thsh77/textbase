         <div xml:id="workid80911" decls="#biblid80911">
            <head xml:id="idm140312757138224">HVORDAN HUN ER</head>
            <lg xml:id="idm140312757137808">
               <l xml:id="idm140312757137552">Hendes Øje er blaat og saa fuldt af Tugt</l>
               <l xml:id="idm140312757137072">Og uskyldig Lyst.</l>
               <l xml:id="idm140312757136656">Hendes Hjerte er godt, og det boer saa smukt</l>
               <l xml:id="idm140312757136208">I det unge Bryst!</l>
            </lg>
            <lg xml:id="idm140312757135664">
               <l xml:id="idm140312757135408">Hendes Kind en Buket af det fineste Rødt</l>
               <l xml:id="idm140312757134928">Med Lillieskjær!</l>
               <l xml:id="idm140312757134496">Og hun rødmer saa let og taler saa sødt</l>
               <l xml:id="idm140312757134016">Og mildt til Enhver!</l>
            </lg>
            <lg xml:id="idm140312757133472">
               <l xml:id="idm140312757133216">O lyksalig den Ven, hvem i Elskovs Stund</l>
               <l xml:id="idm140312757132768">Hun engang i Løn</l>
               <l xml:id="idm140312757132336">Hvisker kjærlig og blid med blussende Mund</l>
               <l xml:id="idm140312757131856">- Svar paa hans Bøn!</l>
            </lg>
            <pb n="245" xml:id="s245" facs="adl/boedtcher/boedtcher1/boed1245"/>
