            <head xml:id="idm140312756209104">VED EN CONFIRMATION</head>
            <p xml:id="idm140312756208688">1 April 1873</p>
            <lg xml:id="idm140312756208272">
               <l xml:id="idm140312756208016">Ak, hvad er vel min svage Sang</l>
               <l xml:id="idm140312756207584">Og Harpen, som Du knap kan høre,</l>
               <l xml:id="idm140312756207120">Mod Kirkens Røst og Orglets Klang,</l>
               <l xml:id="idm140312756206656">Som endnu toner i Dit Øre?</l>
            </lg>
            <lg xml:id="idm140312756206080">
               <l xml:id="idm140312756205824">Og hvad er al Veltalenhed,</l>
               <l xml:id="idm140312756205392">Som Jordens Kløgt vor Tunge lærte,</l>
               <l xml:id="idm140312756204912">Imod Dit Løfte og Din Ed,</l>
               <l xml:id="idm140312756204464">Som kom fra et uskyldigt Hjerte?</l>
            </lg>
            <lg xml:id="idm140312756203904">
               <l xml:id="idm140312756203648">Snart viser Verden Dig sin Fryd,</l>
               <l xml:id="idm140312756203216">Og Glæden krandse vil Din Pande:</l>
               <l xml:id="idm140312756202752">Gid da i Alt en sagte Lyd</l>
               <l xml:id="idm140312756202320">Af Paaskeklokken sig maa blande!</l>
            </lg>
            <lg xml:id="idm140312756201760">
               <l xml:id="idm140312756201504">Træd frejdig kun i Livet ud,</l>
               <l xml:id="idm140312756201040">Og vil sig mørke Skyer nærme,</l>
               <l xml:id="idm140312756200576">Ifør Dig Rustningen fra Gud,</l>
               <l xml:id="idm140312756200112">Og Himlen selv vil Dig beskjærme!</l>
            </lg>
            <pb n="326" xml:id="s326" facs="adl/boedtcher/boedtcher1/boed1326"/>
         </div>
