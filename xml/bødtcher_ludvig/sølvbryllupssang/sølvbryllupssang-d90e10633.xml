         <div xml:id="workid76224" decls="#biblid76224">
            <head xml:id="idm140312757738720">SØLVBRYLLUPSSANG</head>
            <lg xml:id="idm140312757738288">
               <l xml:id="idm140312757738032">Landlige Ynde! køligstille Skygger!</l>
               <l xml:id="idm140312757737552">Her, hvor ved Taget Svalen roligt bygger,</l>
               <l xml:id="idm140312757737104">Vær du, mens Tvedragt rundtomkring maa rase,</l>
               <l xml:id="idm140312757736608">Fredens Oase!</l>
            </lg>
            <lg xml:id="idm140312757736064">
               <l xml:id="idm140312757735808">Her lyder Krigssang kun af muntre Fugle,</l>
               <l xml:id="idm140312757735360">Kun Frugt paa Træet runder sig som Kugle,</l>
               <l xml:id="idm140312757734880">Her kun en Byge listig overfalder,</l>
               <l xml:id="idm140312757734448">Tordnen kun knalder.</l>
            </lg>
            <lg xml:id="idm140312757733904">
               <l xml:id="idm140312757733648">Eros, som flygtig ellers vidt sig svinger,</l>
               <l xml:id="idm140312757733200">Fandt her et Paphos, folded sine Vinger,</l>
               <l xml:id="idm140312757732752">Dvæled i Aarviis, fulde Fem og Tyve,</l>
               <l xml:id="idm140312757732272">Glemte at flyve.</l>
            </lg>
            <lg xml:id="idm140312757731728">
               <l xml:id="idm140312757731472">Guden sin Sølvblomst fletter glad iaften,</l>
               <l xml:id="idm140312757730992">Omkrandser Ynde, smykker Manddomskraften,</l>
               <l xml:id="idm140312757730544">Lægger i Blomsten Duft, som aldrig svinder:</l>
               <l xml:id="idm140312757730048">
                  <hi rend="italic" xml:id="idm140312757729792">Kjærligheds Minder!</hi>
               </l>
            </lg>
            <lg xml:id="idm140312757728816">
               <l xml:id="idm140312757728560">Bacchus! kryst Vinen af din bedste Drue!</l>
               <l xml:id="idm140312757728112">Eros den vies, Guden og hans Bue!</l>
               <l xml:id="idm140312757727680">Maatte han Krandsen ømt i Tidens Fylde</l>
               <l xml:id="idm140312757727200">Aftenforgylde!</l>
            </lg>
            <pb n="189" xml:id="s189" facs="adl/boedtcher/boedtcher1/boed1189"/>
