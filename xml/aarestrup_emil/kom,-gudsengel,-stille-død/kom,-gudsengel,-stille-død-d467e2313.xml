         <div xml:id="workid58566" decls="#biblid58566">
            <head xml:id="idm139983155767984">KOM, GUDSENGEL, STILLE DØD</head>
            <lg xml:id="idm139983155767536">
               <head xml:id="idm139983155767280">I</head>
               <l xml:id="idm139983155766896">Kom, Gudsengel, stille Død,</l>
               <l xml:id="idm139983155766432">Læg mig hen til Ro og Hvile</l>
               <l xml:id="idm139983155765968">Læg mig i min Moders Skjød</l>
               <l xml:id="idm139983155765504">Under Mos og Taarepile</l>
            </lg>
            <lg xml:id="idm139983155764960">
               <head xml:id="idm139983155764704">II</head>
               <l xml:id="idm139983155764320">Jeg er træt af Dagens Blaa,</l>
               <l xml:id="idm139983155763856">Træt af Nattens Stjernetaage -</l>
               <l xml:id="idm139983155763392">Tornekrandsen har jeg paa -</l>
               <l xml:id="idm139983155762960">O jeg kan ei længer vaage -</l>
            </lg>
            <lg xml:id="idm139983155762368">
               <head xml:id="idm139983155762112">III</head>
               <l xml:id="idm139983155761728">Jeg har grubiet mig saa sløv</l>
               <l xml:id="idm139983155761264">Paa den svære Livets Gaade</l>
               <l xml:id="idm139983155760816">Jeg er bleven ør og døv</l>
               <l xml:id="idm139983155760368">Og kan intet mere raade</l>
            </lg>
            <lg xml:id="idm139983155759824">
               <head xml:id="idm139983155759568">IV</head>
               <l xml:id="idm139983155759184">Hjertet, som saa ungt og fast</l>
               <l xml:id="idm139983155758752">Banked i sin Smerte</l>
               <l xml:id="idm139983155758336">Med sin sidste Lykke brast</l>
               <l xml:id="idm139983155757904">Koldt er nu mit Hjerte</l>
            </lg>
            <lg xml:id="idm139983155757360">
               <head xml:id="idm139983155757104">V</head>
               <l xml:id="idm139983155756720">Tag det bort, min mørke Ven!</l>
               <l xml:id="idm139983155756256">Lad det Urnen fylde</l>
               <l xml:id="idm139983155755840">Gravens Vugge - red mig den</l>
               <l xml:id="idm139983155755408">Blødt du mig indhylle!</l>
            </lg>
            <pb n="48" facs="adl/aarestrup/aare4/aare4048" xml:id="idm139983155754832"/>
            <lg xml:id="idm139983155754064">
               <head xml:id="idm139983155753808">VI</head>
               <l xml:id="idm139983155753424">Lad mig aande Gravens Duft!</l>
               <l xml:id="idm139983155752992">See kun - Bægret har jeg drukket,</l>
               <l xml:id="idm139983155752528">O for sidstegang lidt Luft!</l>
               <l xml:id="idm139983155752096">Kun et Drag til Afskedssukket!</l>
            </lg>
         </div>
      </body>
