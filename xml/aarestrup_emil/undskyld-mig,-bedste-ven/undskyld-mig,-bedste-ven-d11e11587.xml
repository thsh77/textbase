         <div xml:id="workid77394" decls="#biblid77394">
            <head xml:id="idm140382754746800">UNDSKYLD MIG, BEDSTE VEN</head>
            <lg xml:id="idm140382754746368">
               <l xml:id="idm140382754746112">Undskyld mig, bedste Ven!</l>
               <l xml:id="idm140382754745680">Du savnes ikke meer;</l>
               <l xml:id="idm140382754745264">Jeg gaaer min egen Vei,</l>
               <l xml:id="idm140382754744848">Forelsket, som du seer.</l>
            </lg>
            <lg xml:id="idm140382754744304">
               <l xml:id="idm140382754744048">Og du, Natur, vær s'god!</l>
               <l xml:id="idm140382754743600">Lad dine Drosler slaae,</l>
               <l xml:id="idm140382754743184">Riv dine Farver ud,</l>
               <l xml:id="idm140382754742768">Og stryg dem paa det Graa!</l>
            </lg>
            <lg xml:id="idm140382754742208">
               <l xml:id="idm140382754741952">Tillad! Som fordum vel</l>
               <l xml:id="idm140382754741536">Jeg hænger ved din Arm;</l>
               <l xml:id="idm140382754741088">Men jeg har intet Blik</l>
               <l xml:id="idm140382754740672">For Rosen ved din Barm.</l>
            </lg>
            <lg xml:id="idm140382754740128">
               <l xml:id="idm140382754739872">Mig har Forliebelsen</l>
               <l xml:id="idm140382754739456">- Imellem os, som sagt -</l>
               <l xml:id="idm140382754739024">I Daarekisten halvt</l>
               <l xml:id="idm140382754738608">Og halvt i Himlen bragt.</l>
            </lg>
         </div>
      </body>
