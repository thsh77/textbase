         <div xml:id="workid60761" decls="#biblid60761">
            <head xml:id="idm139983155493504">TRØST</head>
            <lg xml:id="idm139983155493088">
               <l xml:id="idm139983155492832">Beilere paa alle Kanter!</l>
               <l xml:id="idm139983155492400">Strakte Hænder! Blik, som bede!</l>
               <l xml:id="idm139983155491936">Blomsterurner, kjælne Breve -</l>
               <l xml:id="idm139983155491472">Hvilket farligt Vilderede!</l>
            </lg>
            <lg xml:id="idm139983155490912">
               <l xml:id="idm139983155490656">O hvormange Hensynsfagter,</l>
               <l xml:id="idm139983155490224">O hvormegen Anstandslede,</l>
               <l xml:id="idm139983155489792">Naar de ømme Suk og Bønner</l>
               <l xml:id="idm139983155489328">Blive altfor frie og hede!</l>
            </lg>
            <lg xml:id="idm139983155488768">
               <l xml:id="idm139983155488512">Og hvo vilde vel mig negte,</l>
               <l xml:id="idm139983155488080">At det er en svær Bestilling</l>
               <l xml:id="idm139983155487616">Treffe Valget paa en saadan</l>
               <l xml:id="idm139983155487184">Herre-Industri-Udstilling</l>
            </lg>
            <lg xml:id="idm139983155486624">
               <l xml:id="idm139983155486368">Tapperhed med Sværd ved Siden</l>
               <l xml:id="idm139983155485904">Digtekonsten med sin Lire,</l>
               <l xml:id="idm139983155485472">Lærdom med en vigtig Mine</l>
               <l xml:id="idm139983155485024">Sværme Ven om din Zemire.</l>
            </lg>
            <lg xml:id="idm139983155484448">
               <l xml:id="idm139983155484192">Men vær rolig! Ingen Fare</l>
               <l xml:id="idm139983155483744">Har det med de friske Fyre</l>
               <l xml:id="idm139983155483312">Har det selv med en Adonis -</l>
               <l xml:id="idm139983155482880">Thi hun elsker sit Uhyre.</l>
            </lg>
         </div>
