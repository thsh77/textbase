         <div xml:id="workid57831" decls="#biblid57831">
            <head xml:id="idm140352656310400">NU TÆNDES STJERNEN</head>
            <lg xml:id="idm140352656309968">
               <head xml:id="idm140352656309712">I</head>
               <l xml:id="idm140352656309328">Nu tændes Stjernen</l>
               <l xml:id="idm140352656308896">Og Mørket falder over Jorden</l>
               <l xml:id="idm140352656308432">Jeg staar hvor Alperosen brænder</l>
               <l xml:id="idm140352656307968">Nærved et Vandfalds Torden</l>
            </lg>
            <lg xml:id="idm140352656307392">
               <head xml:id="idm140352656307136">II</head>
               <l xml:id="idm140352656306752">O Amaryllis!</l>
               <l xml:id="idm140352656306336">Du fjerne, i de danske Lunde!</l>
               <l xml:id="idm140352656305904">Dig kalder jeg o kan Du høre?</l>
               <l xml:id="idm140352656305440">O Himmel, hvis Du kunde!</l>
            </lg>
            <lg xml:id="idm140352656304880">
               <head xml:id="idm140352656304624">III</head>
               <l xml:id="idm140352656304240">O Amaryllis!</l>
               <l xml:id="idm140352656303824">Du fjerne, med din Dreng ved Haanden!</l>
               <l xml:id="idm140352656303392">Et Kys! o tag det fra min Læbe</l>
               <l xml:id="idm140352656302928">Tag af mit Hjerte Aanden!</l>
            </lg>
            <lg xml:id="idm140352656302368">
               <head xml:id="idm140352656302112">IV</head>
               <l xml:id="idm140352656301728">Din lille Pige</l>
               <l xml:id="idm140352656301312">Løft hende høit, høit op I Luften.</l>
               <l xml:id="idm140352656300832">Som jeg Orangeblomsten løfter</l>
               <l xml:id="idm140352656300368">Kan Du fornemme Duften?</l>
            </lg>
            <lg xml:id="idm140352656299824">
               <head xml:id="idm140352656299568">V</head>
               <l xml:id="idm140352656299184">Lad Kammen falde!</l>
               <l xml:id="idm140352656298768">Lad Lokkerne om Halsen rulle!</l>
               <l xml:id="idm140352656298336">Jeg finder dog blandt dem Din Nakke</l>
               <l xml:id="idm140352656297904">Den blomstrende, den fulde!</l>
            </lg>
            <pb n="34" facs="adl/aarestrup/aare2/aare2034" xml:id="idm140352656297344"/>
            <lg xml:id="idm140352656296576">
               <head xml:id="idm140352656296320">VI</head>
               <l xml:id="idm140352656295936">Luk kun Dit Øie</l>
               <l xml:id="idm140352656295504">Lad Børnene i Drømme græde</l>
               <l xml:id="idm140352656295040">Lad Lampen slukkes, Stuen mørknes</l>
               <l xml:id="idm140352656294576">Jeg er, jeg er tilstede</l>
            </lg>
            <lg xml:id="idm140352656294032">
               <head xml:id="idm140352656293776">VII</head>
               <l xml:id="idm140352656293392">Dig Nattens Skygger</l>
               <l xml:id="idm140352656292976">Forgjæves kun at skjule stræbe</l>
               <l xml:id="idm140352656292512">Halvdrømmende, henrykt mig møder</l>
               <l xml:id="idm140352656292048">Dit Bryst, Din Arm, Din Læbe.</l>
            </lg>
         </div>
