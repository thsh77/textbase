         <div xml:id="workid67631" decls="#biblid67631">
            <head xml:id="idm140382755955696">BETLERSKEN MED SIT BARN.</head>
            <lg xml:id="idm140382755955264">
               <head xml:id="idm140382755955008">I</head>
               <l xml:id="idm140382755954624">Stakkels Barn, sov ved mit Bryst!</l>
               <l xml:id="idm140382755954192">Mine Taarer skal dig varme.</l>
               <l xml:id="idm140382755953760">Klynk ei med din spæde Røst!</l>
               <l xml:id="idm140382755953296">Græd ei i din Moders Arme!</l>
            </lg>
            <lg xml:id="idm140382755952720">
               <head xml:id="idm140382755952464">II</head>
               <l xml:id="idm140382755952080">Solen alt forlængst gik ned,</l>
               <l xml:id="idm140382755951616">Ingen hørte paa min Klage,</l>
               <l xml:id="idm140382755951168">Ingen har Barmhjertighed,</l>
               <l xml:id="idm140382755950736">Koldt forbi de Glade drage.</l>
            </lg>
            <lg xml:id="idm140382755950176">
               <head xml:id="idm140382755949920">III</head>
               <l xml:id="idm140382755949536">Kom den blege Sorg ihu,</l>
               <l xml:id="idm140382755949120">Hun din Søster er, o Glæde!</l>
               <l xml:id="idm140382755948656">Og hun bedre er end du,</l>
               <l xml:id="idm140382755948240">Skjøndt hun sukke maa og græde.</l>
            </lg>
            <lg xml:id="idm140382755947648">
               <head xml:id="idm140382755947392">IV</head>
               <l xml:id="idm140382755947008">Ak, mon det min Brøde var</l>
               <l xml:id="idm140382755946560">At jeg elskede i Livet?</l>
               <l xml:id="idm140382755946144">Nei - Gud mig velsignet har,</l>
               <l xml:id="idm140382755945712">Han har Mand og Barn mig givet.</l>
            </lg>
            <pb n="124" facs="adl/aarestrup/aare1/aare1124" xml:id="idm140382755945152"/>
            <lg xml:id="idm140382755944384">
               <head xml:id="idm140382755944128">V</head>
               <l xml:id="idm140382755943744">Og hvad jeg af Herren fik</l>
               <l xml:id="idm140382755943312">Vil han vogte og bevare;</l>
               <l xml:id="idm140382755942880">Om mit Barns det skyldfrie Blik</l>
               <l xml:id="idm140382755942448">Svæver jo hans Engleskare.</l>
            </lg>
            <lg xml:id="idm140382755941872">
               <head xml:id="idm140382755941616">VI</head>
               <l xml:id="idm140382755941232">Døden tog min Hjertensven,</l>
               <l xml:id="idm140382755940784">Monne ham til Himlen bære;</l>
               <l xml:id="idm140382755940336">Herren gav og tog igjen,</l>
               <l xml:id="idm140382755939904">Herrens Navn lovpriset være!</l>
            </lg>
            <lg xml:id="idm140382755939312">
               <head xml:id="idm140382755939056">VII</head>
               <l xml:id="idm140382755938672">Skarpe Vinde, blæs ei saa!</l>
               <l xml:id="idm140382755938224">Ak, mit stakkels Barn maa fryse;</l>
               <l xml:id="idm140382755937792">Kolde Steen vi sidde paa,</l>
               <l xml:id="idm140382755937360">Nøgne vi af Kolde gyse.</l>
            </lg>
            <lg xml:id="idm140382755936784">
               <head xml:id="idm140382755936528">VIII</head>
               <l xml:id="idm140382755936112">Piger paa den glade Sti,</l>
               <l xml:id="idm140382755935680">Ømme Piger, hjelp mig Arme!</l>
               <l xml:id="idm140382755935248">Iil dog ei saa koldt forbi!</l>
               <l xml:id="idm140382755934816">See mit Barn! I jer forbarme! -</l>
            </lg>
            <lg xml:id="idm140382755934256">
               <head xml:id="idm140382755934000">IX</head>
               <l xml:id="idm140382755933616">Gjem din Regn, du mørke Skye,</l>
               <l xml:id="idm140382755933152">Til vi finde kan en Hytte;</l>
               <l xml:id="idm140382755932720">Ak, her er jo intet Ly,</l>
               <l xml:id="idm140382755932304">Som mod dig os kan beskytte.</l>
            </lg>
            <lg xml:id="idm140382755931744">
               <head xml:id="idm140382755931488">X</head>
               <l xml:id="idm140382755931104">Vær dog grusom ei, o Jord!</l>
               <l xml:id="idm140382755930656">Styrt saa tungt ei, kolde Draaber!</l>
               <pb n="125" facs="adl/aarestrup/aare1/aare1125" xml:id="idm140382755930224"/>
               <l xml:id="idm140382755929456">Hør, o Gud, den arme Moer,</l>
               <l xml:id="idm140382755929008">Som om Bistand dig anraaber!</l>
            </lg>
            <lg xml:id="idm140382755928448">
               <head xml:id="idm140382755928192">XI</head>
               <l xml:id="idm140382755927808">Stakkels Barn, o dæmp dit Skrig!</l>
               <l xml:id="idm140382755927344">Ak, du er saa vaad, du Arme!</l>
               <l xml:id="idm140382755926912">Bælmørk Natten nærmer sig -</l>
               <l xml:id="idm140382755926448">Gud sig over os forbarme!</l>
            </lg>
         </div>
