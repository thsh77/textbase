         <div xml:id="workid59160" decls="#biblid59160">
            <head xml:id="idm139983155694656">FORSKJØNNELSEN.</head>
            <lg xml:id="idm139983155694224">
               <head xml:id="idm139983155693968">I</head>
               <l xml:id="idm139983155693584">Der var mere i mit Hjerte</l>
               <l xml:id="idm139983155693152">End sædvanlig, kan jeg tro;</l>
               <l xml:id="idm139983155692688">Ikke een blot var derinde -</l>
               <l xml:id="idm139983155692256">Destoværre - der var to.</l>
            </lg>
            <lg xml:id="idm139983155691680">
               <head xml:id="idm139983155691424">II</head>
               <l xml:id="idm139983155691040">Der var altsaa egenligen</l>
               <l xml:id="idm139983155690608">Blot lidt mere end der bør -</l>
               <l xml:id="idm139983155690144">Som en Furie den Skjønne</l>
               <l xml:id="idm139983155689696">Mødte mig og raabte: "Hør!</l>
            </lg>
            <lg xml:id="idm139983155689104">
               <head xml:id="idm139983155688848">III</head>
               <l xml:id="idm139983155688464">Med din Stok skrev du i Sandet</l>
               <l xml:id="idm139983155688032">See kun efter - Vil du see?</l>
               <l xml:id="idm139983155687600">Endnu staaer det der i Gruset,</l>
               <l xml:id="idm139983155687168">Dette krumme, dumme <hi rend="italics" xml:id="idm139983155686880">C!</hi>
               </l>
            </lg>
            <lg xml:id="idm139983155685920">
               <head xml:id="idm139983155685664">IV</head>
               <l xml:id="idm139983155685280">Dette Bogstav, som jeg hader!</l>
               <l xml:id="idm139983155684848">Navnet paa en Bagatell!</l>
               <l xml:id="idm139983155684432">Paa en spinkel Dukkeskabning</l>
               <l xml:id="idm139983155684000">Sammensat af Puf og Spjæld!</l>
            </lg>
            <lg xml:id="idm139983155683408">
               <head xml:id="idm139983155683152">V</head>
               <l xml:id="idm139983155682768">I hvis Hoved alle Tanker</l>
               <l xml:id="idm139983155682336">Ere, som min tomme Handske,</l>
               <l xml:id="idm139983155681904">Parfumeerte, glatte, lækkre,</l>
               <l xml:id="idm139983155681440">Uden Indhold - dertil franske.</l>
            </lg>
            <pb n="54" facs="adl/aarestrup/aare4/aare4054" xml:id="idm139983155680880"/>
            <lg xml:id="idm139983155680112">
               <head xml:id="idm139983155679856">VI</head>
               <l xml:id="idm139983155679472">Qg for denne Silkedronning</l>
               <l xml:id="idm139983155679040">Skal jeg offres, skal jeg døe -</l>
               <l xml:id="idm139983155678576">Ha, jeg styrter mig i Floden -</l>
               <l xml:id="idm139983155678144">Tag mit Kys og mit Adieu!" -</l>
            </lg>
            <lg xml:id="idm139983155677584">
               <head xml:id="idm139983155677328">VII</head>
               <l xml:id="idm139983155676944">Q, hvor Vreden dog forskjønner!</l>
               <l xml:id="idm139983155676480">Hendes Ansigt var som Snee,</l>
               <l xml:id="idm139983155676048">Hvorpaa Ildebrandens Gjenskin</l>
               <l xml:id="idm139983155675616">Er i Nattens Mulm at see.</l>
            </lg>
