         <div xml:id="workid70953" decls="#biblid70953">
            <head xml:id="idm140382755546400">MED EN CONFIRMATIONS ROSE.</head>
            <lg xml:id="idm140382755545968">
               <l xml:id="idm140382755545712">Lille Rose, vær ei bange!</l>
               <l xml:id="idm140382755545264">Du skal Ikke staae tilskamme;</l>
               <l xml:id="idm140382755544832">Ydmyg er paa Helligdagen</l>
               <l xml:id="idm140382755544400">Kindens søde Purpurflamme.</l>
            </lg>
            <lg xml:id="idm140382755543824">
               <l xml:id="idm140382755543568">Lille lykkelige Rose,</l>
               <l xml:id="idm140382755543152">Du skal fromt til Kirke vandre,</l>
               <l xml:id="idm140382755542720">Der hvor Himlens Børn og Jordens</l>
               <l xml:id="idm140382755542256">Hilse venligen hverandre.</l>
            </lg>
            <lg xml:id="idm140382755541696">
               <l xml:id="idm140382755541440">Ak, men artig maa du være!</l>
               <l xml:id="idm140382755540992">Paa din Vei dig følge ville</l>
               <l xml:id="idm140382755540528">Rosmarin og bly Reseda;</l>
               <l xml:id="idm140382755540112">Sæt dig kjønt hos dem og stille!</l>
            </lg>
            <lg xml:id="idm140382755539520">
               <l xml:id="idm140382755539264">Halvomsløret, op til Hjertet</l>
               <l xml:id="idm140382755538800">Maa du gjerne Kinden hvile,</l>
               <l xml:id="idm140382755538368">Men kun af en hellig Glæde,</l>
               <l xml:id="idm140382755537904">Husk, tør du i Kirken smile!</l>
            </lg>
         </div>
