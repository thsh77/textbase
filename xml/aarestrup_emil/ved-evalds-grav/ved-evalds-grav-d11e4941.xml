         <div xml:id="workid63839" decls="#biblid63839">
            <head xml:id="idm140382756417824">VED EVALDS GRAV.</head>
            <lg xml:id="idm140382756417408">
               <l xml:id="idm140382756417152">Evald, fromme Genius,</l>
               <l xml:id="idm140382756416736">Ligger du I Solskin der</l>
               <l xml:id="idm140382756416320">I det kjøle Blomsterhuus?</l>
               <l xml:id="idm140382756415872">See, jeg staaer bag Gittret her,</l>
               <l xml:id="idm140382756415440"> Pyntet under Vaarens Træ'r,</l>
               <l xml:id="idm140382756414976">Rede til en Kirkegang.</l>
               <l xml:id="idm140382756414560">Evald, fromme Genius,</l>
               <l xml:id="idm140382756414144">Staaer du op til Aftensang?</l>
               <l xml:id="idm140382756413712">Løft det store Adelsskjold,</l>
               <l xml:id="idm140382756413248">Som dig hviler stolt paa Bryst!</l>
               <l xml:id="idm140382756412816">Løft det, o du Kjempe bold!</l>
               <l xml:id="idm140382756412352">Digterrosen staaer deri,</l>
               <l xml:id="idm140382756411920">Daad og Sang er ei forbi,</l>
               <l xml:id="idm140382756411488">Er end Danmarks Liv og Lyst.</l>
               <l xml:id="idm140382756411056">Gak i høien Chor at staae</l>
               <l xml:id="idm140382756410608">Mellem Altrets Engle smaa!</l>
               <l xml:id="idm140382756410176">Psalmer du mig lære skal</l>
               <l xml:id="idm140382756409728">Sjunge høit i Christi Hal.</l>
            </lg>
            <lg xml:id="idm140382756409152">
               <l xml:id="idm140382756408896">Mange stirred her, som jeg,</l>
               <l xml:id="idm140382756408464">I det lille Himmerig,</l>
               <l xml:id="idm140382756408048">Som paa grønnen Digtervei</l>
               <l xml:id="idm140382756407600">Fader gav til Hvile dig;</l>
               <l xml:id="idm140382756407168">Mange offred Eviggrønt</l>
               <l xml:id="idm140382756406720">Og en kjærlig Myrteqvist -</l>
               <l xml:id="idm140382756406272">Ak, hvor var det dog ei skjønt,</l>
               <l xml:id="idm140382756405808">Undte mig den rige Christ</l>
               <pb n="91" facs="adl/aarestrup/aare1/aare1091" xml:id="idm140382756405376"/>
               <l xml:id="idm140382756404608">Ogsaa sligt at bringe dig!</l>
               <l xml:id="idm140382756404176">Intet Offer end jeg har;</l>
               <l xml:id="idm140382756403744">Ilden dybt i Hjertet mig</l>
               <l xml:id="idm140382756403312">Brænder sjælden reen og klar,</l>
               <l xml:id="idm140382756402848">Og den vaade Taage bar</l>
               <l xml:id="idm140382756402432">Aldrig nogen Blomsterflor.</l>
               <l xml:id="idm140382756402000">Men til Huset, hvor du boer,</l>
               <l xml:id="idm140382756401568">Til den grønne Sommerdør,</l>
               <l xml:id="idm140382756401120">Jeg andægtig vandre tør;</l>
               <l xml:id="idm140382756400672">Indenfor er Hallen stor,</l>
               <l xml:id="idm140382756400240">Høi og blaa og varm og mild,</l>
               <l xml:id="idm140382756399776">Hjerterne af Rosenild.</l>
               <l xml:id="idm140382756399360">Evald, fromme Genius!</l>
               <l xml:id="idm140382756398944">Ved dit grønne Blomsterhuus,</l>
               <l xml:id="idm140382756398480">Der jeg paa min Kirkegang</l>
               <l xml:id="idm140382756398048">Hilser dig, mens Klokkeklang</l>
               <l xml:id="idm140382756397616">Kalder mig til Aftensang!</l>
            </lg>
