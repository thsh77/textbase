         <div xml:id="workid71050" decls="#biblid71050">
            <head xml:id="idm140352654669200">DRØMMEVERDNEN</head>
            <lg xml:id="idm140352654668768">
               <l xml:id="idm140352654668512">Drømme!</l>
               <l xml:id="idm140352654668096">Hvad vil Mængdens Tale sige</l>
               <l xml:id="idm140352654667632">At de korte, lette Drømme</l>
               <l xml:id="idm140352654667184">Ikke er det Virkelige?</l>
            </lg>
            <lg xml:id="idm140352654666640">
               <l xml:id="idm140352654666384">Dette,</l>
               <l xml:id="idm140352654665968">Vil enhver iblandt os vide,</l>
               <l xml:id="idm140352654665536">At det Stygge og det Slette</l>
               <l xml:id="idm140352654665104">Er i Livet det Solide.</l>
            </lg>
            <lg xml:id="idm140352654664560">
               <l xml:id="idm140352654664304">Vige</l>
               <l xml:id="idm140352654663888">Derfor skal det plumpt Reelle!</l>
               <l xml:id="idm140352654663456">Jeg mod Drømmens Himmelstige</l>
               <l xml:id="idm140352654662992">Vil mit unge Hoved hælde.</l>
            </lg>
            <lg xml:id="idm140352654662416">
               <l xml:id="idm140352654662160">Drømme!</l>
               <l xml:id="idm140352654661744">Lad fra eders Skygge-Rige</l>
               <l xml:id="idm140352654661312">Englene imod mig strømme -</l>
               <l xml:id="idm140352654660864">Vær for mig det Virkelige!</l>
            </lg>
         </div>
      </body>
