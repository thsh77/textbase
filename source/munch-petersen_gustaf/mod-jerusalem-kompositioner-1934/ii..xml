                  <l xml:id="idm140462578135824">o lykke</l>
                  <l xml:id="idm140462578135408">o paradisisk</l>
                  <l xml:id="idm140462578134992">salighed,</l>
                  <l xml:id="idm140462578134576">den 600'de af</l>
                  <l xml:id="idm140462578134160">BAALhadernes blaa</l>
                  <l xml:id="idm140462578133744">ynglende ynglende</l>
