         <div xml:id="workid66916" decls="#biblid66916">
            <head xml:id="idm140381327210912">när -?</head>
            <lg xml:id="idm140381327210496">
               <l xml:id="idm140381327210240">i min svarta skål</l>
               <l xml:id="idm140381327209808">bredvid varandra</l>
               <l xml:id="idm140381327209392">fyra blodröda bär,</l>
               <l xml:id="idm140381327208944">ännu orörda -</l>
               <l xml:id="idm140381327208528">när skall du våga</l>
               <l xml:id="idm140381327208096">ta i mina blodröda bär och bita i dem,</l>
               <l xml:id="idm140381327207616">tills du drunknar i min blindhet -,</l>
               <l xml:id="idm140381327207184">skall du någonsin</l>
               <l xml:id="idm140381327206752">våga snudda vid min svarta skål -?</l>
               <l xml:id="idm140381327206272">skall jag någonsin</l>
               <l xml:id="idm140381327205840">tvingas lämna,</l>
               <l xml:id="idm140381327205408">för väder och vind att leka med,</l>
               <pb n="96" xml:id="idm140381327204944" rend="missing"/>
               <l xml:id="idm140381327204400">min svarta skål,</l>
               <l xml:id="idm140381327203968">för att leta nya bär, lika</l>
               <l xml:id="idm140381327203504">glödande, tigande,</l>
               <l xml:id="idm140381327203072">eller ännu blodrödare,</l>
               <l xml:id="idm140381327202624">för någon annan -, okänd</l>
               <l xml:id="idm140381327202176">att få offra sitt anlete åt en ny blindhet,</l>
               <l xml:id="idm140381327201680">som fjärran -,</l>
               <l xml:id="idm140381327201248">dock måste vara min -</l>
            </lg>
         </div>
