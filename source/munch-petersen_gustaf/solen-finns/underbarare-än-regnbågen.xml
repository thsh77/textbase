   <text>
      <body>
         <div xml:id="workid65046" decls="#biblid65046">
            <head xml:id="idm140381327458272">underbarare än regnbågen</head>
            <lg xml:id="idm140381327457824">
               <l xml:id="idm140381327457568">mer underbar än regnbågen</l>
               <l xml:id="idm140381327457120">är hungerns poesi,</l>
               <l xml:id="idm140381327456704">drömmen att</l>
               <l xml:id="idm140381327456272">med samma flottglänsande kniv</l>
               <l xml:id="idm140381327455808">få utföra svältens slöjdans</l>
               <l xml:id="idm140381327455344">och mättnadens vilda rumba,</l>
               <pb n="83" xml:id="idm140381327454880" rend="missing"/>
               <l xml:id="idm140381327454336">den drömmen går före alla andra drömmar,</l>
               <l xml:id="idm140381327453840">när du möter den -,</l>
               <l xml:id="idm140381327453392">hungerns poesi är</l>
               <l xml:id="idm140381327452960">modigare än alla drömmare, fräckare</l>
               <l xml:id="idm140381327452480">än alla mördare -,</l>
               <l xml:id="idm140381327452064">underbarare än regnbågen</l>
               <l xml:id="idm140381327451616">är hon -</l>
            </lg>
         </div>
