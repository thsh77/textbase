         <div xml:id="workid58804" decls="#biblid58804">
            <head xml:id="idm140381328245360">the smile</head>
            <lg xml:id="idm140381328244944">
               <l xml:id="idm140381328244688">you old woman</l>
               <l xml:id="idm140381328244272">with the cutting sparks</l>
               <l xml:id="idm140381328243856">behind the slow glance -,</l>
               <l xml:id="idm140381328243424">with lips as a slash in a lonely fir -,</l>
               <l xml:id="idm140381328242992">with teeth as lurking anger -,</l>
               <l xml:id="idm140381328242560">ah you -!</l>
               <l xml:id="idm140381328242144">ah you -, you -!</l>
            </lg>
            <lg xml:id="idm140381328241600">
               <l xml:id="idm140381328241344">I'll drive you</l>
               <l xml:id="idm140381328240928">slowly, slowly towards the immovable precipice -,</l>
               <l xml:id="idm140381328240480">I'll laugh at your sneering retreat -,</l>
               <l xml:id="idm140381328240048">I'll snap at your lingering heel,</l>
               <l xml:id="idm140381328239616">you wicked love-hater -,</l>
               <l xml:id="idm140381328239184">I'll crush your sunken bosom,</l>
               <l xml:id="idm140381328238752">and</l>
               <l xml:id="idm140381328238368">on the outmost brink</l>
               <l xml:id="idm140381328237952">I'll bite your murderous joy,</l>
               <l xml:id="idm140381328237520">I'll love you to ripeness hard as flint -,</l>
               <l xml:id="idm140381328237072">you -, ah</l>
               <l xml:id="idm140381328236656">you -, dear -!</l>
            </lg>
            <pb n="37" xml:id="idm140381328236112" rend="missing"/>
