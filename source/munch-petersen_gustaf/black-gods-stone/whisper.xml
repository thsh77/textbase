   <text>
      <body>
         <div xml:id="workid58053" decls="#biblid58053">
            <head xml:id="idm140381328339680">whisper</head>
            <lg xml:id="idm140381328339264">
               <l xml:id="idm140381328339008">pale-brown girl,</l>
               <l xml:id="idm140381328338592">I want to touch your hand,</l>
               <l xml:id="idm140381328338160">your slim, patient hand -,</l>
               <l xml:id="idm140381328337728">I want to touch your fingers -,</l>
               <l xml:id="idm140381328337296">to watch your pale-brown face</l>
               <l xml:id="idm140381328336864">turn -</l>
            </lg>
            <lg xml:id="idm140381328336320">
               <l xml:id="idm140381328336064">my heart is a knot</l>
               <l xml:id="idm140381328335648">of ill-treated scars</l>
               <l xml:id="idm140381328335232">in my tight-screwed fist -</l>
               <l xml:id="idm140381328334800">pale-brown girl,</l>
               <l xml:id="idm140381328334384">I am afraid of every movement -</l>
               <l xml:id="idm140381328333952">your soft, black eyes</l>
               <l xml:id="idm140381328333536">do graze my brow -</l>
               <l xml:id="idm140381328333120">will you heal me -?</l>
               <l xml:id="idm140381328332704">can you -?</l>
            </lg>
            <lg xml:id="idm140381328332160">
               <l xml:id="idm140381328331904">pale-brown girl,</l>
               <l xml:id="idm140381328331488">I want to touch your fingers -</l>
               <l xml:id="idm140381328331056">I am afraid of every movement -</l>
               <l xml:id="idm140381328330624">let your sad, black eyes</l>
               <l xml:id="idm140381328330192">rest on my brow -</l>
               <l xml:id="idm140381328329776">I have no tears,</l>
               <l xml:id="idm140381328329360">and my strength has gone -</l>
            </lg>
            <pb n="32" xml:id="idm140381328328800" rend="missing"/>
