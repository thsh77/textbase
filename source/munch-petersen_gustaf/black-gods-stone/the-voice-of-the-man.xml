   <text>
      <body>
         <div xml:id="workid58500" decls="#biblid58500">
            <head xml:id="idm140381328283120">the voice of the man</head>
            <lg xml:id="idm140381328282704">
               <l xml:id="idm140381328282448">don't seek my eyes -</l>
               <l xml:id="idm140381328282032">I am afraid of every contact -</l>
               <l xml:id="idm140381328281600">I am afraid</l>
               <l xml:id="idm140381328281184">of the desire to rule</l>
               <l xml:id="idm140381328280768">deep in the soul of my hand -</l>
               <l xml:id="idm140381328280336">I am afraid of the fetters,</l>
               <l xml:id="idm140381328279904">which my eyes do put on everything -</l>
               <l xml:id="idm140381328279472">don't touch me -,</l>
               <l xml:id="idm140381328279056">I hate obeyance -,</l>
               <l xml:id="idm140381328278640">I hate the clinging love of the dreamers</l>
               <l xml:id="idm140381328278192">don't seek my eyes -,</l>
               <l xml:id="idm140381328277776">I am no phantom -,</l>
               <l xml:id="idm140381328277360">I am no seeker -</l>
               <l xml:id="idm140381328276944">don't touch me -</l>
            </lg>
            <lg xml:id="idm140381328276400">
               <l xml:id="idm140381328276144">I am nothing but fate -</l>
               <l xml:id="idm140381328275728">I am afraid of every contact -</l>
               <l xml:id="idm140381328275296">my hand shall take what it must -</l>
               <l xml:id="idm140381328274864">don't touch me -</l>
               <l xml:id="idm140381328274448">my eyes don't seek -</l>
            </lg>
         </div>
      </body>
