      <body>
         <div xml:id="workid59477" decls="#biblid59477">
            <head xml:id="idm140462580012128">den store mand</head>
            <lg xml:id="idm140462580011712">
               <l xml:id="idm140462580011456">han gaar og sparker</l>
               <l xml:id="idm140462580011040">med kæmpeskridt</l>
               <l xml:id="idm140462580010608">og træder saa haardt i jorden -</l>
               <l xml:id="idm140462580010144">men græsset,</l>
               <l xml:id="idm140462580009712">det rejser sig atter op,</l>
               <l xml:id="idm140462580009280">hvor han satte sin store fod,</l>
               <l xml:id="idm140462580008848">og jorden smiler, som intet var sket,</l>
               <l xml:id="idm140462580008416">og blomsterne tænker paa andet -</l>
            </lg>
            <lg xml:id="idm140462580007824">
               <l xml:id="idm140462580007568">han gaar og brøler,</l>
               <l xml:id="idm140462580007120">med tordenstemme,</l>
               <l xml:id="idm140462580006704">saa luften dirrer og skælver -</l>
               <l xml:id="idm140462580006240">men skyerne</l>
               <l xml:id="idm140462580005824">driver saa roligt forbi,</l>
               <l xml:id="idm140462580005392">hvor tordenen rullede før,</l>
               <l xml:id="idm140462580004944">og himlen smiler, som intet var sket,</l>
               <l xml:id="idm140462580004512">og solen tænker paa andet -</l>
            </lg>
         </div>
