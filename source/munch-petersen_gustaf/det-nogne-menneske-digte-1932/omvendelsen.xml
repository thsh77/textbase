         <div xml:id="workid57961" decls="#biblid57961">
            <head xml:id="idm140462580204960">omvendelsen</head>
            <lg xml:id="idm140462580204544">
               <l xml:id="idm140462580204288">vi forstod intet,</l>
               <l xml:id="idm140462580203872">vidste intet,</l>
               <l xml:id="idm140462580203456">og vi trøstede hinanden</l>
               <l xml:id="idm140462580203008">vi tvivlede sammen -</l>
               <l xml:id="idm140462580202592">men en dag</l>
               <l xml:id="idm140462580202176">blev min verden klar,</l>
               <l xml:id="idm140462580201760">og min himmel lys og varm -</l>
               <l xml:id="idm140462580201328">den dag</l>
               <l xml:id="idm140462580200912">saa jeg,</l>
               <pb n="7" xml:id="idm140462580200496" rend="missing"/>
               <l xml:id="idm140462580199952">jeg hørte det,</l>
               <l xml:id="idm140462580199520">og jeg forstod,</l>
               <l xml:id="idm140462580199104">hvorfor jorden før var graa,</l>
               <l xml:id="idm140462580198640">og hvorfor himlen nu var lys -</l>
               <l xml:id="idm140462580198208">men de andre,</l>
               <l xml:id="idm140462580197792">der intet forstod -</l>
               <l xml:id="idm140462580197376">jeg vilde frelse dem;</l>
               <l xml:id="idm140462580196960">men de</l>
               <l xml:id="idm140462580196544">rystede paa hovedet,</l>
               <l xml:id="idm140462580196128">og jeg</l>
               <l xml:id="idm140462580195712">fik haan i stemmen.</l>
            </lg>
         </div>
      </body>
