   <text>
      <body>
         <div xml:id="workid58995" decls="#biblid58995">
            <head xml:id="idm140462580073408">det</head>
            <lg xml:id="idm140462580073024">
               <l xml:id="idm140462580072768">ikke den tanke,</l>
               <l xml:id="idm140462580072352">at jeg endnu gaar paa stien -</l>
               <l xml:id="idm140462580071920">at jeg endnu har den trygge bjærgvæg</l>
               <l xml:id="idm140462580071440">ved min side -</l>
               <l xml:id="idm140462580071024">at der gror blomster -</l>
               <l xml:id="idm140462580070608">og at græsset dæmper skridtets haardhed-</l>
            </lg>
            <pb n="14" xml:id="idm140462580070000" rend="missing"/>
            <lg xml:id="idm140462580069456">
               <l xml:id="idm140462580069200">at klippen udstraaler solens varme -</l>
               <l xml:id="idm140462580068768">men</l>
               <l xml:id="idm140462580068384">det, at jeg ved,</l>
               <l xml:id="idm140462580067968">at jeg kan træde fejl -</l>
               <l xml:id="idm140462580067520">at der er en afgrund -</l>
               <l xml:id="idm140462580067104">at jeg maa gaa sikkert,</l>
               <l xml:id="idm140462580066688">og at bjærgvæggen ved min side</l>
               <l xml:id="idm140462580066224">rykker nærmere kanten, jo længere jeg naar-</l>
               <l xml:id="idm140462580065728">at stien bliver haardere,</l>
               <l xml:id="idm140462580065296">og skærverne skarpere -</l>
               <l xml:id="idm140462580064848">at græsset blir gult,</l>
               <l xml:id="idm140462580064400">naar jeg kommer nær solen.</l>
            </lg>
         </div>
      </body>
