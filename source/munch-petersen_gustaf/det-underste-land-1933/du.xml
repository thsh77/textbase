         <div xml:id="workid69170" decls="#biblid69170">
            <head xml:id="idm140462578785280">du</head>
            <lg xml:id="idm140462578784896">
               <l xml:id="idm140462578784640">døende laa den lille -</l>
               <l xml:id="idm140462578784192">et tyndt skrig -</l>
               <l xml:id="idm140462578783776">minutter som millioner af modbydelige fluer -</l>
               <l xml:id="idm140462578783328">gloende hamrede angsten smaa tindinger -</l>
               <l xml:id="idm140462578782880">kynisk langsomt gik du</l>
               <l xml:id="idm140462578782464">hele natten -</l>
               <l xml:id="idm140462578782048">malede du skrækkors -,</l>
               <l xml:id="idm140462578781600">time efter time -</l>
               <l xml:id="idm140462578781184">smaa øjne - smaa fingre</l>
               <l xml:id="idm140462578780736">overgav sig stump efter stump</l>
               <l xml:id="idm140462578780304">til fluerne -</l>
               <l xml:id="idm140462578779888">du hæklede sorte sløjfer</l>
               <l xml:id="idm140462578779440">og bandt dem sindigt</l>
               <l xml:id="idm140462578779024">om hver enkelt lille glæde -</l>
               <l xml:id="idm140462578778560">iturevne smaastumper af skrig fejede du ud</l>
               <l xml:id="idm140462578778112">med træt mine -</l>
               <l xml:id="idm140462578777680">døende laa den lille</l>
               <l xml:id="idm140462578777232">endnu om morgenen -</l>
               <l xml:id="idm140462578776816">saa brast din taalmodighed -,</l>
               <l xml:id="idm140462578776384">genert smilende sagde du: kom -</l>
               <l xml:id="idm140462578775952">og sammen gik i ud</l>
               <l xml:id="idm140462578775536">paa en ny eng -</l>
               <l xml:id="idm140462578775120">under græsset</l>
               <l xml:id="idm140462578774688">vred jorden sig i tykmavet latter -</l>
               <l xml:id="idm140462578774256">og solen kom</l>
               <l xml:id="idm140462578773840">som en blankøjet ko</l>
               <l xml:id="idm140462578773392">og slikkede den lille i nakken -</l>
            </lg>
