      <body>
         <div xml:id="workid68261" decls="#biblid68261">
            <head xml:id="idm140462578901664">kærlighed</head>
            <lg xml:id="idm140462578901248">
               <l xml:id="idm140462578900992">jeg kom til den by,</l>
               <l xml:id="idm140462578900576">hvor alle mennesker lever -</l>
               <l xml:id="idm140462578900144">og jeg saa med stor smerte,</l>
               <l xml:id="idm140462578899712">at alle var sekskantede,</l>
               <l xml:id="idm140462578899280">tolvkantede eller ottekantede</l>
               <l xml:id="idm140462578898848">de, som jeg ikke kendte,</l>
               <l xml:id="idm140462578898416">lo og sagde, at jeg var et æg</l>
               <l xml:id="idm140462578897952">og de, som elskede mig,</l>
               <pb n="109" xml:id="idm140462578897536" rend="missing"/>
               <l xml:id="idm140462578896992">blev graa og klagede,</l>
               <l xml:id="idm140462578896576">fordi eet enkelt æg</l>
               <l xml:id="idm140462578896128">kostede saa mange mennesker -</l>
            </lg>
            <lg xml:id="idm140462578895568">
               <l xml:id="idm140462578895312">en kvinde, som aldrig havde elsket,</l>
               <l xml:id="idm140462578894880">kom og fortalte mig,</l>
               <l xml:id="idm140462578894464">at jeg var født af en langbenet fugl,</l>
               <l xml:id="idm140462578893984">som havde mistet sin stemme</l>
               <l xml:id="idm140462578893552">ved at se langt bort -</l>
               <l xml:id="idm140462578893136">og hun forstod, at hun maatte blive længe hos mig</l>
               <l xml:id="idm140462578892640">en gang hvert halve aar</l>
               <l xml:id="idm140462578892224">knækkede skallen</l>
               <l xml:id="idm140462578891792">og noget kom ud -,</l>
               <l xml:id="idm140462578891376">og der var en ny skal nedenunder -</l>
            </lg>
            <lg xml:id="idm140462578890816">
               <l xml:id="idm140462578890560">glad laa jeg i hendes skød</l>
               <l xml:id="idm140462578890112">og prøvede alle farver -</l>
               <l xml:id="idm140462578889664">og hun sad alene og græd</l>
               <l xml:id="idm140462578889216">over, at eet eneste æg</l>
               <l xml:id="idm140462578888768">skulde koste saa mange mennesker -</l>
            </lg>
         </div>
