      <body>
         <div xml:id="workid80368" decls="#biblid80368">
            <head xml:id="idm140462577367328">aften</head>
            <lg xml:id="idm140462577366912">
               <l xml:id="idm140462577366656">fremmed vind spredte</l>
               <l xml:id="idm140462577366240">erindrings aske -</l>
               <l xml:id="idm140462577365824">det er ild: at brænde -</l>
               <l xml:id="idm140462577365376">ild skal vogtes hellig -</l>
               <l xml:id="idm140462577364944">aske kvæler -</l>
            </lg>
            <lg xml:id="idm140462577364384">
               <l xml:id="idm140462577364128">aftenvind sejler</l>
               <l xml:id="idm140462577363712">med tegn paa sejlet -</l>
               <l xml:id="idm140462577363296">ren ild brænder gud i dig -</l>
               <l xml:id="idm140462577362832">og fortærer alt -</l>
               <l xml:id="idm140462577362400">aske dømmer -</l>
            </lg>
            <lg xml:id="idm140462577361840">
               <l xml:id="idm140462577361584">vind sover i maanens øje -</l>
               <l xml:id="idm140462577361136">intet er at ønske -</l>
               <l xml:id="idm140462577360688">meget er at faa -</l>
               <l xml:id="idm140462577360272">gud rinder bort i græsset</l>
               <l xml:id="idm140462577359824">tryg -</l>
            </lg>
            <lg xml:id="idm140462577359280">
               <l xml:id="idm140462577359024">duggens snegl læspede saligt:</l>
               <l xml:id="idm140462577358560">søgeren gaar vild</l>
               <l xml:id="idm140462577358128">kilden finder en -</l>
               <l xml:id="idm140462577357712">- sol sukker i min sko -</l>
            </lg>
         </div>
      </body>
