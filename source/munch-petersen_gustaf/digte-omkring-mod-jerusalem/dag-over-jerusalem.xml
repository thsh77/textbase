         <div xml:id="workid79655" decls="#biblid79655">
            <head xml:id="idm140462577457520">dag over jerusalem</head>
            <lg xml:id="idm140462577457104">
               <l xml:id="idm140462577456848">verdens største kærlighed</l>
               <l xml:id="idm140462577456400">skræmte yngling</l>
               <l xml:id="idm140462577455968">til pilende mus -</l>
               <l xml:id="idm140462577455552">i hullet grublede mus</l>
               <l xml:id="idm140462577455136">vidunderligt</l>
               <l xml:id="idm140462577454720">som et persisk sjal -</l>
               <l xml:id="idm140462577454304">hullet, kaldte mus</l>
               <l xml:id="idm140462577453888">(gnavende fredens kærner)</l>
               <l xml:id="idm140462577453440">for jerusalem -</l>
            </lg>
            <lg xml:id="idm140462577452896">
               <l xml:id="idm140462577452640">fra tusind æventyrs rygende pibe</l>
               <l xml:id="idm140462577452176">dansede fredens odalisker -</l>
               <l xml:id="idm140462577451744">mus maabede</l>
               <l xml:id="idm140462577451328">med ny muld i silkemave -</l>
               <l xml:id="idm140462577450896">jerusalems hul fandt ingen -</l>
            </lg>
            <lg xml:id="idm140462577450336">
               <l xml:id="idm140462577450080">mens evighedsspillende strænge</l>
               <l xml:id="idm140462577449616">sitrede i jerusalems hul,</l>
               <l xml:id="idm140462577449184">fødte mus i dvale</l>
               <l xml:id="idm140462577448752">en MAND af jord</l>
               <l xml:id="idm140462577448336">med rod paa ubrugt muld -</l>
            </lg>
         </div>
      </body>
