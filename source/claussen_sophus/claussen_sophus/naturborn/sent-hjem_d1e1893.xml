         <div xml:id="workid58617" decls="#biblid58617">
            <head xml:id="idm140012640552576">
               <hi rend="italics" xml:id="idm140012640552320">SENT HJEM</hi>
            </head>
            <lg xml:id="idm140012640551504">
               <l xml:id="idm140012640551248">Jeg slentred ind ad Porten,</l>
               <l xml:id="idm140012640550816">da Gaardens Haner gol.</l>
               <l xml:id="idm140012640550400">Paa Straatags Mosset skinned</l>
               <l xml:id="idm140012640549968">den kære, gyldne Sol.</l>
            </lg>
            <lg xml:id="idm140012640549392">
               <l xml:id="idm140012640549136">I Gaardens køle Dugluft</l>
               <l xml:id="idm140012640548688">stod der et Hvedehæs;</l>
               <l xml:id="idm140012640548240">fra Vognrums Stænget dufted</l>
               <l xml:id="idm140012640547776">det sødt af Hø og Græs.</l>
            </lg>
            <lg xml:id="idm140012640547200">
               <l xml:id="idm140012640546944">Jeg kiged gennem Ruden</l>
               <l xml:id="idm140012640546528">ind til min tomme Seng</l>
               <l xml:id="idm140012640546112">og drev saa gennem Haven</l>
               <l xml:id="idm140012640545680">ud paa en Kløvereng,</l>
            </lg>
            <lg xml:id="idm140012640545104">
               <l xml:id="idm140012640544848">hvor Morgensolen dryssed</l>
               <l xml:id="idm140012640544416">fra Himmelluft sit Guld</l>
               <l xml:id="idm140012640544000">ned paa en Mark, af Perler</l>
               <l xml:id="idm140012640543568">og Diamanter fuld.</l>
            </lg>
            <lg xml:id="idm140012640543024">
               <l xml:id="idm140012640542768">En Pige sad derude</l>
               <l xml:id="idm140012640542352">og malked sine Kør.</l>
               <l xml:id="idm140012640541904">De stirred, som om aldrig</l>
               <l xml:id="idm140012640541472">de havde set mig før ...</l>
            </lg>
            <lg xml:id="idm140012640540896">
               <l xml:id="idm140012640540640">Jeg slængte mig i Kløvret,</l>
               <l xml:id="idm140012640540176">hvor Duggens Draaber flød,</l>
               <l xml:id="idm140012640539728">og kvæged i dets Svalhed</l>
               <l xml:id="idm140012640539280">Kindens og Pandens Glød.</l>
            </lg>
            <pb n="38" xml:id="s38" facs="adl/claussen/claussen03/claussen3038"/>
            <lg xml:id="idm140012640537600">
               <l xml:id="idm140012640537344">Og i det vaade grønne,</l>
               <l xml:id="idm140012640536896">mens Solen skinned varm,</l>
               <l xml:id="idm140012640536464">sov jeg igen og drømte</l>
               <l xml:id="idm140012640536016">mig ved din unge Barm.</l>
            </lg>
         </div>
