         <div xml:id="workid58416" decls="#biblid58416">
            <head xml:id="idm139805819017520">
               <hi rend="italics" xml:id="idm139805819017264">NORGE</hi>
            </head>
            <lg xml:id="idm139805819016448">
               <l xml:id="idm139805819016192">Golde Sten og Fossefraad</l>
               <l xml:id="idm139805819015760">det er Jættens Husgeraad,</l>
               <l xml:id="idm139805819015312">Vandfald over Fjælde-Rande</l>
               <l xml:id="idm139805819014864">ophængt Traad ved Traad.</l>
            </lg>
            <lg xml:id="idm139805819014288">
               <l xml:id="idm139805819014032">Fossen, som med Ødets Sus</l>
               <l xml:id="idm139805819013584">gyder Drøm i Jættens Hus,</l>
               <l xml:id="idm139805819013136">er til Evighed beruset</l>
               <l xml:id="idm139805819012720">af sin egen Rus.</l>
            </lg>
            <lg xml:id="idm139805819012176">
               <l xml:id="idm139805819011920">Spørg, om Kilden ved Besked,</l>
               <l xml:id="idm139805819011456">om den Rejsens Rigdom véd,</l>
               <l xml:id="idm139805819011008">Bækken, som fra sære Højder</l>
               <l xml:id="idm139805819010544">styrter lodret ned.</l>
            </lg>
            <lg xml:id="idm139805819010000">
               <l xml:id="idm139805819009744">Elve kaster sig i Harm,</l>
               <l xml:id="idm139805819009328">gør en Verdens Skrald og Larm,</l>
               <l xml:id="idm139805819008864">hænger ned ad Klippesiden</l>
               <l xml:id="idm139805819008416">dystert, Tarm ved Tarm.</l>
            </lg>
            <lg xml:id="idm139805819007872">
               <l xml:id="idm139805819007616">Bag dem rejses Himlen høj.</l>
               <l xml:id="idm139805819007168">Stundum gør de Spøgen drøj,</l>
               <l xml:id="idm139805819006704">alle Jættens Tarme runger</l>
               <l xml:id="idm139805819006256">af en fælles Støj.</l>
            </lg>
            <lg xml:id="idm139805819005680">
               <l xml:id="idm139805819005424">Fjældets Tragt er graa og arm ...</l>
               <l xml:id="idm139805819004960">Men paa Tindens Vinduskarm</l>
               <l xml:id="idm139805819004528">sidder Solen ør og skrøner</l>
               <l xml:id="idm139805819004064">hele Verden varm.</l>
            </lg>
            <pb n="38" xml:id="s38" facs="adl/claussen/claussen07/claussen7038"/>
            <lg xml:id="idm139805819002416">
               <l xml:id="idm139805819002160">Fyrren i sit Tempelskrud</l>
               <l xml:id="idm139805819001728">paa en Fjeldkam foldet ud</l>
               <l xml:id="idm139805819001296">staar forladt af Gud og straaler</l>
               <l xml:id="idm139805819000864">i en Glans af Gud.</l>
            </lg>
            <lg xml:id="idm139805819000320">
               <l xml:id="idm139805819000064">Luften bliver fin og mild,</l>
               <l xml:id="idm139805818999632">Fossevæld og Felespil.</l>
               <l xml:id="idm139805818999184">Og hvad kan der skænkes mere,</l>
               <l xml:id="idm139805818998720">end at Drøm er til -?</l>
            </lg>
         </div>
