         <div xml:id="workid64446" decls="#biblid64446">
            <head xml:id="idm139805818276384">
               <hi rend="italics" xml:id="idm139805818276128">DEN STORE RHYTME</hi>
            </head>
            <lg xml:id="idm139805818275312">
               <l xml:id="idm139805818275056">Skovens Orkester.</l>
               <l xml:id="idm139805818274640">Det brune Løv forneden.</l>
               <l xml:id="idm139805818274192">Maanen skimtes</l>
               <l xml:id="idm139805818273776">i Tusmørkefreden.</l>
            </lg>
            <lg xml:id="idm139805818273216">
               <l xml:id="idm139805818272960">Skovens Orkester.</l>
               <l xml:id="idm139805818272544">Min Violin i Haanden,</l>
               <l xml:id="idm139805818272128">møder jeg Ødet,</l>
               <l xml:id="idm139805818271696">Tomheden, Aanden.</l>
            </lg>
            <lg xml:id="idm139805818271152">
               <l xml:id="idm139805818270896">Skovens Orkester.</l>
               <l xml:id="idm139805818270480">Hvad søger du, Broder?</l>
               <l xml:id="idm139805818270032">Uhørlige Toner,</l>
               <l xml:id="idm139805818269600">usynlige Noder.</l>
            </lg>
            <lg xml:id="idm139805818269056">
               <l xml:id="idm139805818268800">Skovene tømmes,</l>
               <l xml:id="idm139805818268368">Vejen forsvinder.</l>
               <l xml:id="idm139805818267952">Jeg søger en Fryd</l>
               <l xml:id="idm139805818267520">uden Modstand og Hinder.</l>
            </lg>
            <lg xml:id="idm139805818266960">
               <l xml:id="idm139805818266704">Jeg søger Tusmørkets Sjæl</l>
               <l xml:id="idm139805818266240">og det Ødes,</l>
               <l xml:id="idm139805818265808">Rhytmen, som uden at mærkes</l>
               <l xml:id="idm139805818265344">fødes.</l>
            </lg>
            <lg xml:id="idm139805818264800">
               <l xml:id="idm139805818264544">Den store Rhytme,</l>
               <l xml:id="idm139805818264128">hvad har du fornøden?</l>
               <l xml:id="idm139805818263680">den store Rhytme</l>
               <l xml:id="idm139805818263264">er Døden.</l>
            </lg>
         </div>
