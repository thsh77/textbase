         <div xml:id="idm140208210200544"><!-- -->
            <head xml:id="idm140208210200032">
               <hi rend="italics" xml:id="idm140208210199776">XVII</hi>
            </head>
            <lg xml:id="idm140208210199024">
               <l xml:id="idm140208210198768">Nu ændrer sig vor Lire,</l>
               <l xml:id="idm140208210198320">og vi lader Trefoden staa</l>
               <l xml:id="idm140208210197936">og tager Løb paa fire.</l>
            </lg>
            <lg xml:id="idm140208210197360">
               <l xml:id="idm140208210197104">Nu skrider vi til, med System</l>
               <l xml:id="idm140208210196720">at vise, hvorledes de danske</l>
               <l xml:id="idm140208210196336">kan drøfte <hi rend="italics" xml:id="idm140208210196080">et stort Problem</hi>.</l>
            </lg>
            <lg xml:id="idm140208210195200">
               <l xml:id="idm140208210194944">I alle nymodens Huse</l>
               <l xml:id="idm140208210194560">der findes en Knageræk sat,</l>
               <l xml:id="idm140208210194096">hvorpaa man kan hænge sin Hat.</l>
            </lg>
            <lg xml:id="idm140208210193504">
               <l xml:id="idm140208210193248">
                  <hi rend="italics" xml:id="idm140208210193120">Problemer</hi> har man en Klat,</l>
               <l xml:id="idm140208210192368">hvori man kan kvæle sin Muse.</l>
               <l xml:id="idm140208210191904">Jeg sætter Problem til Debat.</l>
            </lg>
            <lg xml:id="idm140208210191312">
               <l xml:id="idm140208210191056">Jeg synger om Mikkel og Jørgen,</l>
               <l xml:id="idm140208210190592">kom, ryst Eders Mellemgulv,</l>
               <l xml:id="idm140208210190208">og spar den unyttige Spørgen!</l>
               <l xml:id="idm140208210189744">Jeg synger om Ræv og Ulv -</l>
            </lg>
            <lg xml:id="idm140208210189168">
               <l xml:id="idm140208210188912">om Ræven, den fiffige røde,</l>
               <l xml:id="idm140208210188448">og Ulven, den præstegraa,</l>
               <l xml:id="idm140208210188000">to store Dyr i vor Samtid,</l>
               <l xml:id="idm140208210187616">men højst forskellig klædt paa.</l>
            </lg>
            <lg xml:id="idm140208210187024">
               <l xml:id="idm140208210186768">Saa hør da, hvorlunde Provst Jørgen</l>
               <l xml:id="idm140208210186288">i egen høje Person</l>
               <l xml:id="idm140208210185904">og den fornægterske Mikkel</l>
               <l xml:id="idm140208210185456">tog Stilling til Religion.</l>
            </lg>
            <pb n="232" xml:id="s232" facs="adl/claussen/claussen04/claussen4232"/>
            <lg xml:id="idm140208210183840">
               <l xml:id="idm140208210183584">Problemet var Mikkel ej fremmed.</l>
               <l xml:id="idm140208210183200">Han havde viet det før</l>
               <l xml:id="idm140208210182752">til lang og ensom Betænkning;</l>
               <l xml:id="idm140208210182288">thi kræved hans Tale Gehør.</l>
            </lg>
            <lg xml:id="idm140208210181696">
               <l xml:id="idm140208210181440">I lige Maade Provsten,</l>
               <l xml:id="idm140208210181056">da dødssyg han laa paa sin Ryg,</l>
               <l xml:id="idm140208210180592">var kommen til en Betragtning,</l>
               <l xml:id="idm140208210180208">han anbefaler saa tryg.</l>
            </lg>
         </div>
