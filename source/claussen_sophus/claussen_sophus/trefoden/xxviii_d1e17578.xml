         <div xml:id="idm140208209834000"><!-- -->
            <head xml:id="idm140208209833392">
               <hi rend="italics" xml:id="idm140208209833136">XXVIII</hi>
            </head>
            <lg xml:id="idm140208209832352">
               <l xml:id="idm140208209832096">Som sagt jeg fryser paa Foden.</l>
               <l xml:id="idm140208209831664">Her bliver nu hvert Ideal</l>
               <l xml:id="idm140208209831232">bortsolgt som Træ paa Roden.</l>
            </lg>
            <lg xml:id="idm140208209830640">
               <l xml:id="idm140208209830384">Skrivere, dyp Eders Penne!</l>
               <l xml:id="idm140208209829952">her holdes Skovauktion:</l>
               <l xml:id="idm140208209829536">vi realiserer vort Brænde.</l>
            </lg>
            <lg xml:id="idm140208209828960">
               <l xml:id="idm140208209828704">Her holdes Skovauktion.</l>
               <l xml:id="idm140208209828288">En Gang som yngre Person</l>
               <l xml:id="idm140208209827856">med Venner jeg gik denne Vej.</l>
            </lg>
            <lg xml:id="idm140208209827296">
               <l xml:id="idm140208209827040">Nu slaar man dem ned for Fode,</l>
               <l xml:id="idm140208209826608">Trær, der var lige saa gode,</l>
               <l xml:id="idm140208209826144">og Trær, der var bedre end jeg.</l>
            </lg>
            <lg xml:id="idm140208209825552">
               <l xml:id="idm140208209825296">Der siges, at større og tung Skov</l>
               <l xml:id="idm140208209824832">ej luner nok for Plantøren.</l>
               <l xml:id="idm140208209824368">Han lægger sig efter Ungskov.</l>
            </lg>
            <lg xml:id="idm140208209823776">
               <l xml:id="idm140208209823520">Der siges, han aarlig planter</l>
               <l xml:id="idm140208209823088">Smaaskud og Skovdebutanter</l>
               <l xml:id="idm140208209822656">til Glæde for Mødre og Tanter.</l>
            </lg>
            <lg xml:id="idm140208209822064">
               <l xml:id="idm140208209821808">Men Trær af en rimelig Højde</l>
               <l xml:id="idm140208209821344">blir bortsolgt som Træ paa Roden,</l>
               <l xml:id="idm140208209820880">ej mer paa Højde med Moden.</l>
            </lg>
            <pb n="259" xml:id="s259" facs="adl/claussen/claussen04/claussen4259"/>
            <lg xml:id="idm140208209819040">
               <l xml:id="idm140208209818784">Digtere, sælg Eders Brænde,</l>
               <l xml:id="idm140208209818320">og er det for frisk til at tænde,</l>
               <l xml:id="idm140208209817856">og har det for rige Safter,</l>
            </lg>
            <lg xml:id="idm140208209817296">
               <l xml:id="idm140208209817040">da brug det som Øxeskafter.</l>
               <l xml:id="idm140208209816576">Jeg fælder en Eg med Dryade,</l>
               <l xml:id="idm140208209816112">af den vil jeg bygge en Lade.</l>
            </lg>
            <lg xml:id="idm140208209815552">
               <l xml:id="idm140208209815296">Da ingen antager mer</l>
               <l xml:id="idm140208209814880">den Forskel, der er paa en Høvding</l>
               <l xml:id="idm140208209814416">i Skov og en - Pennefjer,</l>
            </lg>
            <lg xml:id="idm140208209813856">
               <l xml:id="idm140208209813600">din Trefod med Høvdinge-Syner,</l>
               <l xml:id="idm140208209813136">bemalet med Vilddyr-Tryner,</l>
               <l xml:id="idm140208209812704">skal skaffe dig Dun og Dyner.</l>
            </lg>
            <lg xml:id="idm140208209812144">
               <l xml:id="idm140208209811888">Her rives nu Tvivl med Tro,</l>
               <l xml:id="idm140208209811456">her kives nu Køter og Ko,</l>
               <l xml:id="idm140208209811008">og Hat kan ej udstaa Sko.</l>
            </lg>
            <lg xml:id="idm140208209810448">
               <l xml:id="idm140208209810192">Jeg er en enlig stillet.</l>
               <l xml:id="idm140208209809760">Dog vil jeg hævde Dansen</l>
               <l xml:id="idm140208209809312">og Sansen for Sammenspillet.</l>
            </lg>
