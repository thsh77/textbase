         <div xml:id="workid64627" decls="#biblid64627">
            <head xml:id="idm140125919228496">
               <hi rend="italics" xml:id="idm140125919228240">MAANENAT</hi>
            </head>
            <lg xml:id="idm140125919227424">
               <l xml:id="idm140125919227168">Langs ad de natlige Gader</l>
               <l xml:id="idm140125919226736">to Skygger mit Fodtrin møde,</l>
               <l xml:id="idm140125919226272">den blaalige skære fra Maanen</l>
               <l xml:id="idm140125919225808">og Lygternes matte røde.</l>
            </lg>
            <lg xml:id="idm140125919225232">
               <l xml:id="idm140125919224976">Alvorlig, sky og alvorlig</l>
               <l xml:id="idm140125919224544">ud i den hvide, hvide</l>
               <l xml:id="idm140125919224128">sværmende Vinter-Midnat,</l>
               <l xml:id="idm140125919223680">der vil jeg alene skride.</l>
            </lg>
            <lg xml:id="idm140125919223120">
               <l xml:id="idm140125919222864">Jeg taaler ej Had og Kærtegn</l>
               <l xml:id="idm140125919222400">af Kvinder, - som Sneen taaler</l>
               <l xml:id="idm140125919221968">ej haarde Hæles Trampen,</l>
               <l xml:id="idm140125919221520">ej Solens lunkne Straaler.</l>
            </lg>
            <lg xml:id="idm140125919220960">
               <l xml:id="idm140125919220704">Og over mit ensomme Hoved</l>
               <l xml:id="idm140125919220272">i Nattens havblaa Kuppel</l>
               <l xml:id="idm140125919219840">der fryser Maanen sibirisk</l>
               <l xml:id="idm140125919219408">hvid, som en Sølverrubel.</l>
            </lg>
            <lg xml:id="idm140125919218832">
               <l xml:id="idm140125919218576">Det er, som min tabte Veninde,</l>
               <l xml:id="idm140125919218144">Dronning for alle de Gode,</l>
               <l xml:id="idm140125919217712">sad dèr og frøs i sit Pelsværk,</l>
               <l xml:id="idm140125919217248">- en lysende Himmelklode.</l>
            </lg>
            <lg xml:id="idm140125919216688">
               <l xml:id="idm140125919216432">Det er, som hun inderlig vilde</l>
               <l xml:id="idm140125919216000">sig selv med mit Væsen blande,</l>
               <l xml:id="idm140125919215536">men skulde sidde og straale</l>
               <l xml:id="idm140125919215104">med Helgenring om sin Pande.</l>
            </lg>
            <pb n="115" xml:id="s115" facs="adl/claussen/claussen06/claussen6115"/>
            <lg xml:id="idm140125919213344">
               <l xml:id="idm140125919213088">Der rækker hun mig i Tavshed</l>
               <l xml:id="idm140125919212624">sit Haandtryk for Timer og Tider,</l>
               <l xml:id="idm140125919212192">mens Himmelhavet evig</l>
               <l xml:id="idm140125919211776">ned over Stjernerne skrider.</l>
            </lg>
         </div>
