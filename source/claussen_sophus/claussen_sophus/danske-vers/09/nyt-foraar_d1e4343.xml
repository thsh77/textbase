   <text>
      <body>
         <div xml:id="workid64054" decls="#biblid64054">
            <head xml:id="idm140125919299328">
               <hi rend="italics" xml:id="idm140125919299072">NYT FORAAR</hi>
            </head>
            <lg xml:id="idm140125919298256">
               <l xml:id="idm140125919298000">Mer dovent ej drives</l>
               <l xml:id="idm140125919297584">fra Vinterens Hi</l>
               <l xml:id="idm140125919297168">en udhungret Bamse,</l>
               <l xml:id="idm140125919296752">hvis Ro er forbi,</l>
            </lg>
            <lg xml:id="idm140125919296208">
               <l xml:id="idm140125919295952">end jeg. - Mine Tanker</l>
               <l xml:id="idm140125919295536">paa Hvidbjørne-Vis</l>
               <l xml:id="idm140125919295104">de rejser sig: levende</l>
               <l xml:id="idm140125919294688">Blokke af Is!</l>
            </lg>
            <lg xml:id="idm140125919294144">
               <l xml:id="idm140125919293888">Hvad skal dette Foraar,</l>
               <l xml:id="idm140125919293472">som fylder min Krop?</l>
               <l xml:id="idm140125919293056">og Solen, som atter</l>
               <l xml:id="idm140125919292640">gaar straalende op?</l>
            </lg>
            <lg xml:id="idm140125919292096">
               <l xml:id="idm140125919291840">Jeg vækkes med eet</l>
               <l xml:id="idm140125919291408">af en Drøm fra i Gaar,</l>
               <l xml:id="idm140125919290960">for at modtage Livet</l>
               <l xml:id="idm140125919290544">med alle dets Kaar.</l>
            </lg>
            <lg xml:id="idm140125919290000">
               <l xml:id="idm140125919289744">Den Træthed, som lammed</l>
               <l xml:id="idm140125919289296">min Styrke i Fjor,</l>
               <l xml:id="idm140125919288880">er atter forsvundet</l>
               <l xml:id="idm140125919288464">og slettet dens Spor.</l>
            </lg>
            <lg xml:id="idm140125919287920">
               <l xml:id="idm140125919287664">Der tændes en Sol</l>
               <l xml:id="idm140125919287232">bag mit stivfrosne Muld,</l>
               <l xml:id="idm140125919286800">som klæder Alverden</l>
               <l xml:id="idm140125919286352">i Purpur og Guld!</l>
            </lg>
         </div>
