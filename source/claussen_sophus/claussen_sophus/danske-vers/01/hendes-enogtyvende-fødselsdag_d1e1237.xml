         <div xml:id="workid56885" decls="#biblid56885">
            <head xml:id="idm140125920184800">
               <hi rend="italics" xml:id="idm140125920184544">HENDES ENOGTYVENDE FØDSELSDAG</hi>
            </head>
            <lg xml:id="idm140125920183680">
               <l xml:id="idm140125920183424">Sov nu og drøm din Morgen i Ro,</l>
               <l xml:id="idm140125920182960">mens Solskinnet kvidrer let.</l>
               <l xml:id="idm140125920182528">Dine Strømper paa Stolen, paa Gulvet dine Sko,</l>
               <l xml:id="idm140125920182032">paa Natbordet dit Korset.</l>
               <l xml:id="idm140125920181600">Sund og bleg i det matte Haar</l>
               <l xml:id="idm140125920181168">drøm, drøm ung og tro.</l>
               <l xml:id="idm140125920180720">Ej din Ven ved dit Hoved staar</l>
               <l xml:id="idm140125920180288">i Dag, du er enogtyve Aar.</l>
            </lg>
            <lg xml:id="idm140125920179728">
               <l xml:id="idm140125920179472">Smal er din Pigeseng og lun,</l>
               <l xml:id="idm140125920179040">snævert dit sirlige Rum.</l>
               <l xml:id="idm140125920178592">Slumrende selv, som et Dun mellem Dun,</l>
               <l xml:id="idm140125920178160">gør du Tiden varsom og stum.</l>
               <l xml:id="idm140125920177696">Et Savn af forelsket Lune mig naar,</l>
               <l xml:id="idm140125920177264">Veninde, voksen og brun,</l>
               <l xml:id="idm140125920176832">at sé dig, kysse dig, klappe dit Haar,</l>
               <l xml:id="idm140125920176352">som Pige paa ti-tolv-tretten Aar.</l>
            </lg>
            <lg xml:id="idm140125920175792">
               <l xml:id="idm140125920175536">Fortæl mig, bliver vi selv ej Mænd,</l>
               <l xml:id="idm140125920175056">naar et kvindeligt Barn vi forstaar</l>
               <l xml:id="idm140125920174624">og giver os kvindelig taalsomt hen</l>
               <l xml:id="idm140125920174192">hendes enogtyve Aar - - -?</l>
               <l xml:id="idm140125920173760">Jeg er bleven saa glad og foraarssvag,</l>
               <l xml:id="idm140125920173328">jeg kender mig næppe igen,</l>
               <l xml:id="idm140125920172880">naar jeg lytter til Fuglenes Pippen og Slag</l>
               <l xml:id="idm140125920172432">derude i Haven længe før Dag.</l>
            </lg>
