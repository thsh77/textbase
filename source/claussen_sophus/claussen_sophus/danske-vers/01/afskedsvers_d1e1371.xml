   <text>
      <body>
         <div xml:id="workid57180" decls="#biblid57180">
            <head xml:id="idm140125920147824">
               <hi rend="italics" xml:id="idm140125920147568">AFSKEDSVERS</hi>
            </head>
            <lg xml:id="idm140125920146752">
               <l xml:id="idm140125920146496">Fra denne Muld, hvor Lærker</l>
               <l xml:id="idm140125920146032">slaar op ved hver en Tue,</l>
               <l xml:id="idm140125920145600">fra dine milde Øjne</l>
               <l xml:id="idm140125920145152">under den kække Hue</l>
               <l xml:id="idm140125920144704">og denne Fjord, hvis Morgen af Foraarslys formildes,</l>
               <l xml:id="idm140125920144256">blødt kantet med en Sølvsøm, hvor Hav og Skyer skilles
										-</l>
            </lg>
            <lg xml:id="idm140125920143584">
               <l xml:id="idm140125920143328">vil jeg nu tage Afsked</l>
               <l xml:id="idm140125920142912">en bedre By at finde</l>
               <l xml:id="idm140125920142496">og blande Smil og Graad</l>
               <l xml:id="idm140125920142080">med en mindre knibsk Gudinde,</l>
               <l xml:id="idm140125920141648">der skænker mig med Læberne fuldt og villig rakte</l>
               <l xml:id="idm140125920141152">ved sine Knæ at drømme, at elske og foragte -</l>
            </lg>
            <lg xml:id="idm140125920140528">
               <l xml:id="idm140125920140272">som ta'r mig rask om Halsen</l>
               <l xml:id="idm140125920139840">og lader sig ej tigge,</l>
               <l xml:id="idm140125920139424">som aldrig spørger: har han</l>
               <l xml:id="idm140125920138960">fortjent det, eller ikke?</l>
               <l xml:id="idm140125920138528">men straaler med to Øjne, hvis Fryd hun ej kan skjule</l>
               <l xml:id="idm140125920138016">- - som efterligner dine, en ganske lille
										Smule - -</l>
            </lg>
            <lg xml:id="idm140125920137424">
               <l xml:id="idm140125920137168">Den flinke danske Muse</l>
               <l xml:id="idm140125920136752">hun sætter sig paa Skødet</l>
               <l xml:id="idm140125920136304">hos mig med glade Fagter:</l>
               <l xml:id="idm140125920135872">hun bliver ikke nødet,</l>
               <l xml:id="idm140125920135424">hun bærer ingen Sorg for det altfor virkelige,</l>
               <l xml:id="idm140125920134928">saa du kan langtfra staa dig mod denne kække Pige.</l>
            </lg>
