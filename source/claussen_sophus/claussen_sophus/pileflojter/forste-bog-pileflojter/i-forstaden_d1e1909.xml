         <div xml:id="workid58216" decls="#biblid58216">
            <head xml:id="idm140208213853776">
               <hi rend="italics" xml:id="idm140208213853520">I FORSTADEN</hi>
            </head>
            <stage type="mix" xml:id="idm140208213852704">(Paa et Visitkort, da hun ikke fandtes hjemme)</stage>
            <lg xml:id="idm140208213851968">
               <l xml:id="idm140208213851712">En Skorstensrøg forkuller</l>
               <l xml:id="idm140208213851264">fra tusind Skydehuller</l>
               <l xml:id="idm140208213850848">det skyblaa Himmelland</l>
               <l xml:id="idm140208213850432">langs Byens Rand.</l>
            </lg>
            <lg xml:id="idm140208213849888">
               <l xml:id="idm140208213849632">En frodig Mark udlader</l>
               <l xml:id="idm140208213849216">i Rader og i Flader</l>
               <l xml:id="idm140208213848800">landskabelig Fornuft</l>
               <l xml:id="idm140208213848384">mod Aftnens Luft.</l>
            </lg>
            <lg xml:id="idm140208213847840">
               <l xml:id="idm140208213847584">Der gaar en Kat i Kaalen,</l>
               <l xml:id="idm140208213847152">hvid sniger den sig stjaalen.</l>
               <l xml:id="idm140208213846720">Der staar en Hyld ved Hegnet</l>
               <l xml:id="idm140208213846288">med Blomsterskjolder tegnet.</l>
            </lg>
            <lg xml:id="idm140208213845728">
               <l xml:id="idm140208213845472">Og nogle store Popler</l>
               <l xml:id="idm140208213845056">de brede Toppe kobler</l>
               <l xml:id="idm140208213844640">fortrolig, skyggetyst,</l>
               <l xml:id="idm140208213844224">hvor alt er lyst.</l>
            </lg>
            <lg xml:id="idm140208213843680">
               <l xml:id="idm140208213843424">Der staar et Hus paa Marken,</l>
               <l xml:id="idm140208213842992">hvor Toget gaar forbi.</l>
               <l xml:id="idm140208213842576">Der staar et Hus paa Marken</l>
               <l xml:id="idm140208213842144">... med ingen i.</l>
            </lg>
         </div>
