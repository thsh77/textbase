            <head xml:id="idm140208214083888">
               <hi rend="italics" xml:id="idm140208214083632">KØBENHAVNSK</hi>
            </head>
            <lg xml:id="idm140208214082800">
               <l xml:id="idm140208214082544">Saa snart jeg Violer kan sanse,</l>
               <l xml:id="idm140208214082112">da længes jeg tyst efter Græs,</l>
               <l xml:id="idm140208214081648">efter krusede Bukkar-Kranse</l>
               <l xml:id="idm140208214081216">og Landsbyers Pile og Gæs,</l>
               <l xml:id="idm140208214080768">fjærnt ud over Fodtrins-Dønningen</l>
               <l xml:id="idm140208214080304">mellem Søndermarken og Grønningen.</l>
            </lg>
            <lg xml:id="idm140208214079696">
               <l xml:id="idm140208214079440">Men i den grønne Oktober</l>
               <l xml:id="idm140208214078992">med Solskin af plettet Guld</l>
               <l xml:id="idm140208214078560">jeg drømmer om Urskov og Cooper</l>
               <l xml:id="idm140208214078096">blandt Blade og fugtig Muld</l>
               <l xml:id="idm140208214077664">og gaar til en Dam bag Østerbro</l>
               <l xml:id="idm140208214077200">at fiske <hi rend="italics" xml:id="idm140208214076912">Alger</hi> og <hi rend="italics" xml:id="idm140208214076192">Krebseklo</hi> ...</l>
            </lg>
         </div>
