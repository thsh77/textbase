            <head xml:id="idm139945511985968">
               <hi rend="italics" xml:id="idm139945511985712">AFSKED</hi>
            </head>
            <lg xml:id="idm139945511984896">
               <l xml:id="idm139945511984640">Efter en Drøm uden Lige</l>
               <l xml:id="idm139945511984192">skilles vi høflige, spydige</l>
               <l xml:id="idm139945511983728">som to demaskerede Fægtere,</l>
               <l xml:id="idm139945511983264">der erklærer hinanden for dydige.</l>
            </lg>
            <lg xml:id="idm139945511982672">
               <l xml:id="idm139945511982416">Vi skilles som to Duellanter,</l>
               <l xml:id="idm139945511981984">der hilser med sænkede Vaaben.</l>
               <l xml:id="idm139945511981520">De krysted hinanden en Smule for tæt</l>
               <l xml:id="idm139945511981040">Ansigt til Ansigt, Visiren aaben.</l>
            </lg>
            <lg xml:id="idm139945511980480">
               <l xml:id="idm139945511980224">Som Amazonen hilser sin Helt,</l>
               <l xml:id="idm139945511979792">som Helten sin Amazone,</l>
               <l xml:id="idm139945511979376">to stumme Fjender, der skued for dybt,</l>
               <l xml:id="idm139945511978944">men genfandt en skæmtende Tone -</l>
            </lg>
            <lg xml:id="idm139945511978352">
               <l xml:id="idm139945511978096">Vi hilser med sænkede Klinger</l>
               <l xml:id="idm139945511977632">muntert, men ikke smittende.</l>
               <l xml:id="idm139945511977200">Én var det nye Aarhundrede,</l>
               <l xml:id="idm139945511976768">den anden forblev i det nittende.</l>
            </lg>
            <pb n="22" xml:id="s22" facs="adl/claussen/claussen05/claussen5022"/>
